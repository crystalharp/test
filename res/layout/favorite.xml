<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_light" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray_dark"
        android:gravity="left|top">
        <LinearLayout
            android:id="@+id/tab_view"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >
            <Button
                android:id="@+id/poi_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"  
                android:text="@string/place"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@drawable/btn_tab" />
            <Button
                android:id="@+id/traffic_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"  
                android:text="@string/traffic"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@drawable/btn_tab"  />
        </LinearLayout>        
                
        <LinearLayout
            android:id="@+id/bottom_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="2"
            android:gravity="center">
            
            <Button android:id="@+id/delete_btn" 
                android:layout_width="200dp" 
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="24dp"
                android:background="@drawable/btn_default"
                android:drawableLeft="@drawable/ic_delete"
                android:textSize="16sp"
                android:text="@string/delete"
                android:gravity="center"
                android:textColor="@color/btn_normal"/>
                
            <Button android:id="@+id/all_select_btn" 
                android:layout_width="200dp" 
                android:layout_height="wrap_content"
                android:layout_weight="1"  
                android:paddingRight="24dp"
                android:background="@drawable/btn_default"
                android:drawableLeft="@drawable/ic_all_select"
                android:textSize="16sp"
                android:text="@string/all_select"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textColor="@color/btn_normal"/>
        </LinearLayout>
         
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/bottom_view"
            android:layout_below="@id/tab_view"
            android:paddingBottom="4dp"
            >              
            <FrameLayout android:id="@+id/poi_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <com.tigerknows.view.SpringbackListView android:id="@+id/poi_lsv"
	            android:layout_width="fill_parent" 
	            android:layout_height="fill_parent"   
	            android:padding="0dp"
	            android:dividerHeight="0dp"
	            android:divider="@drawable/divider"
	            android:drawSelectorOnTop="false"
	            android:scrollingCache="false"
                android:footerDividersEnabled="false"
	            android:fadingEdge="none"/> 
            <TextView android:id="@+id/poi_empty_txv"
	            android:layout_width="fill_parent" 
	            android:layout_height="fill_parent"  
	            android:paddingBottom="60dp" 
	            android:gravity="center"
	            android:textColor="@android:color/black"
	            android:textSize="16sp"
	            android:text="@string/history_empty"
	            android:background="@color/gray_light"
	            android:visibility="gone"/>
            </FrameLayout>      
            <FrameLayout android:id="@+id/traffic_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <com.tigerknows.view.SpringbackListView android:id="@+id/traffic_lsv"
	            android:layout_width="fill_parent" 
	            android:layout_height="fill_parent"   
	            android:padding="0dp"
	            android:dividerHeight="0dp"
	            android:divider="@drawable/divider"
	            android:drawSelectorOnTop="false"
	            android:scrollingCache="false"
                android:footerDividersEnabled="false"
	            android:fadingEdge="none" />    
            <TextView android:id="@+id/traffic_empty_txv"
	            android:layout_width="fill_parent" 
	            android:layout_height="fill_parent"  
	            android:paddingBottom="60dp" 
	            android:gravity="center"
	            android:textColor="@android:color/black"
	            android:textSize="16sp"
	            android:text="@string/history_empty"
	            android:background="@color/gray_light"
	            android:visibility="gone"/>
            </FrameLayout>      
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>

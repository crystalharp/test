<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" 
    android:layout_height="fill_parent"
    android:padding="20dp">
    
    <RelativeLayout
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:background="@drawable/bg_discover_home_picture">
            <LinearLayout
                android:id="@+id/text_view"
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/nearby_result_view"
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp">
                    <TextView
                        android:id="@+id/nearby_num_txv"
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_alignParentLeft="true"
                        android:singleLine="true"
                        android:textColor="@color/black_dark"
                        android:text="@string/nearby_"
                        android:textSize="24sp"/>
                    <TextView
                        android:id="@+id/city_num_txv"
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nearby_num_txv"
                        android:layout_marginBottom="8dp"
                        android:paddingTop="8dp"
                        android:singleLine="true"
                        android:text="@string/entire_city_"
                        android:textColor="@color/black_light"
                        android:textSize="16sp"/>
        
                    <ProgressBar
                        android:id="@+id/progress_prb"
                        style="@style/Widget.ProgressBar"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />      
                </RelativeLayout>
            </LinearLayout>
            <ImageView 
                android:id="@+id/picture_imv"
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view"
                android:background="@color/normal_background"
                android:scaleType="fitXY"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/bubble_imv"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:background="@drawable/ic_discover_tuangou"/>
    </RelativeLayout>
</RelativeLayout>


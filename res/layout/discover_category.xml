<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" 
    android:layout_height="fill_parent"
	android:padding="20dp">
	
	<RelativeLayout
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView 
            android:id="@+id/picture_imv"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingTop="12dp"
            android:paddingRight="14dp"
	        android:background="@drawable/bg_discover_home_picture"
	        android:src="@drawable/ic_discover_home_tuangou_focused"
	        android:scaleType="fitXY"
	        />
		<LinearLayout
		    android:id="@+id/text_view"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_below="@id/picture_imv"
	        android:orientation="vertical"
            android:background="@drawable/bg_discover_home_text">
			<RelativeLayout
			    android:id="@+id/nearby_result_view"
		        android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:paddingLeft="16dp"
		        android:paddingTop="8dp"
		        android:paddingRight="24dp"
		        android:paddingBottom="16dp">
			    <TextView
		            android:id="@+id/nearby_num_txv"
			        android:layout_width="wrap_content" 
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:text="@string/nearby_"
		            android:textSize="24sp"/>
			    <TextView
			        android:id="@+id/city_num_txv"
			        android:layout_width="fill_parent" 
			        android:layout_height="wrap_content"
			        android:layout_below="@id/nearby_num_txv"
		            android:paddingTop="8dp"
			        android:text="@string/entire_city_"
				    android:textColor="#ff00b4ff"
			        android:textSize="16sp"/>
	
			    <ProgressBar
			        android:id="@+id/progress_prb"
			        android:layout_alignParentLeft="true"
			        style="@style/Widget.ProgressBar"
			        android:layout_width="24dp"
			        android:layout_height="24dp" />      
		    </RelativeLayout>
	    </LinearLayout>
	    <ImageView
	        android:id="@+id/bubble_imv"
	        android:layout_marginTop="-24dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginLeft="40dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignTop="@id/text_view"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:background="@drawable/ic_discover_tuangou"/>
    </RelativeLayout>
</RelativeLayout>


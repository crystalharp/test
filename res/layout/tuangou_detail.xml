<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tkandroid ="http://schemas.android.com/apk/res/com.tigerknows"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_discover"
    >

    <ScrollView
        android:id="@+id/body_scv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:gravity="top"
        android:fillViewport="true"
        android:fadingEdge="none"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="20dp"
            >

            <RelativeLayout 
                android:id="@+id/picture_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <ImageView 
                    android:id="@+id/bg_imv"
                    android:layout_width="260dp"
                    android:layout_height="180dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/bg_picture_tuangou_detail"
                    />
                <ImageView 
                    android:id="@+id/picture_imv"
                    android:layout_width="250dp"
                    android:layout_height="170dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon"
                    />
                <ImageView 
                    android:id="@+id/shangjia_marker_imv"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignRight="@id/bg_imv"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    />

                <TextView 
                    android:id="@+id/name_txv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#99ffffff"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="@string/distance"
                    android:focusable="false"
                    />
            </RelativeLayout>
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:background="@android:color/white"
                android:visibility="visible"
                >
            </RelativeLayout>
                
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:background="@android:color/white"
                >
                <ImageView
                    android:id="@+id/refund_imv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_is_refund"
                    />
                <TextView
                    android:id="@+id/refund_txv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/refund_imv"
                    android:layout_centerVertical="true"
                    android:text="@string/app_name"
                    />
                <TextView
                    android:id="@+id/buyer_num_txv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/app_name"
                    android:gravity="center_vertical"
                    android:drawablePadding="2dp"
                    />
            </RelativeLayout>
            <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_sawtooth"
                />

            <RelativeLayout 
                android:id="@+id/nearby_fendian_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/list_header"
                >
                <TextView
                    android:id="@+id/shanghu_txv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/app_name"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/nearby_fendian_txv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_alignParentRight="true"
                    android:text="@string/app_name"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_light"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:textSize="14sp"
                    />
             </RelativeLayout>
             <include layout="@layout/tuangou_fendian_list_item"
                 android:id="@+id/tuangou_fendian_list_item"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="8dp"
                 android:layout_marginRight="8dp"
                 />

            <LinearLayout
                android:id="@+id/content_view"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_single"
                >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="left|center_vertical"
                     android:text="@string/tuangou_taocanxiangqing"
                     android:textColor="@color/blue"
                     android:padding="8dp"
                     android:textSize="18sp"
                     />

                 <ImageView
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/bg_broken_line"
                     />
                 <TextView
                     android:id="@+id/content_txv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="8dp"
                     android:layout_gravity="center_horizontal"
                     android:gravity="left|center_vertical"
                     android:text="@string/app_name"
                     android:textColor="@color/black_dark"
                     android:textSize="16sp"
                     />
             </LinearLayout>

            <LinearLayout
                android:id="@+id/noticed_view"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_single"
                >
                <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="8dp"
                     android:gravity="left|center_vertical"
                     android:text="@string/tuangou_detail_noticed"
                     android:textColor="@color/blue"
                     android:textSize="18sp"
                     />
                 <ImageView
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/bg_broken_line"
                     />
                 <com.tigerknows.view.CollapseTextView
                     android:id="@+id/noticed_txv"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:padding="8dp"
                     tkandroid:textSize="16sp"
                     tkandroid:maxLines="4"
                     />
            </LinearLayout>

            <LinearLayout android:id="@+id/service_hotline_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/list_single"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                >
                <TextView android:id="@+id/service_hotline_title_txv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="@string/service_hotline"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    />
                <TextView android:id="@+id/service_hotline_txv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:drawableRight="@drawable/ic_telephone"
                    android:text="@string/app_name"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:autoLink="none"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:id="@+id/padding_txv"
            android:text="@string/app_name"
            android:textColor="@android:color/transparent"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RelativeLayout 
            android:id="@+id/bar_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_below="@id/padding_txv"
            android:padding="6dp"
            >
            <Button 
                android:id="@+id/buy_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:singleLine="true"
                android:focusable="false"
                android:background="@drawable/btn_buy"
                />
                
            <TextView 
                android:id="@+id/price_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignBottom="@id/buy_btn"
                android:layout_marginLeft="8dp"
                android:textColor="#fffd9215"
                android:textSize="32sp"
                android:text="@string/distance"
                android:singleLine="true"
                android:includeFontPadding="false"
                android:focusable="false"
                />
            <TextView 
                android:id="@+id/org_price_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/price_txv"
                android:layout_alignBottom="@id/buy_btn"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="4dp"
                android:textColor="#99000000"
                android:textSize="14sp"
                android:text="@string/distance"
                android:singleLine="true"
                android:includeFontPadding="false"
                android:focusable="false"
                />
            <TextView 
                android:id="@+id/discount_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/price_txv"
                android:layout_above="@id/org_price_txv"
                android:layout_marginLeft="8dp"
                android:textColor="#99000000"
                android:textSize="14sp"
                android:text="@string/distance"
                android:singleLine="true"
                android:includeFontPadding="false"
                android:focusable="false"
                />
        </RelativeLayout>
    </RelativeLayout>

    <include
        android:id="@+id/loading_view"
        layout="@layout/loading_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        >
    </include>
</RelativeLayout>
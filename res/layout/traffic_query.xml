    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_frl"
        android:layout_alignParentLeft="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
	            
		    <LinearLayout 
		  	    android:id="@+id/common_place_lsv"
		  	    android:orientation="vertical"
		        android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		        >
			   	</LinearLayout>
		    <LinearLayout 
		  	    android:id="@+id/add_common_place"
		  	    android:orientation="vertical"
		        android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		        android:paddingLeft="8dp"
		        android:paddingRight="8dp"
		        android:visibility="gone"
		        android:background="@drawable/list_footer"
		         >
		    	<TextView 
			        android:layout_width="fill_parent" 
			        android:layout_height="wrap_content"
			        android:text="add common place"
		    	    />
		   	</LinearLayout>
		
		    <LinearLayout 
		  	    android:id="@+id/query_history_title"
		  	    android:orientation="vertical"
		        android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		        android:paddingLeft="8dp"
		        android:paddingRight="8dp"
		        android:background="@drawable/list_header"
		        android:layout_marginTop="16dp"
		         >
		    	<TextView 
			        android:layout_width="fill_parent" 
			        android:layout_height="20dp"
			        android:text="search history"
		    	    />
		   	</LinearLayout>
		    <LinearLayout 
		  	    android:id="@+id/query_history_lst"
		  	    android:orientation="vertical"
		        android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		         >
		   	</LinearLayout>
        </LinearLayout>
    </ScrollView>
   

<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/normal_background"
    >
    <include android:id="@+id/title_view"
        layout="@layout/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <ScrollView
        android:id="@+id/body_scv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        android:fadingEdge="none"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left|top"
            >
            <EditText
                android:id="@+id/feedback_edt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:isScrollContainer="true"
                android:gravity="top"
                android:maxLength="1024"
                android:maxLines="8"
                android:lines="6"
                android:hint="@string/your_feedback"
                android:background="@color/white"
                android:imeOptions="actionNext"
                >
            </EditText>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="8dp">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_line_split"
                    />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/telephone_edt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:padding="8dp"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:background="@color/white"
                    android:lines="1"
                    android:hint="@string/your_mobile_number"
                    android:imeOptions="actionSend"
                    android:digits="0123456789"
                    >
                </EditText>
            </LinearLayout>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_line_split"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/normal_background"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

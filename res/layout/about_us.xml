<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:padding="0dp"
    android:gravity="center" 
    android:background="@color/gray_dark">
    <include android:id="@+id/title_view"
        layout="@layout/title" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
        
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title_view"
        android:fadingEdge="none">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_discover">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/about_logo"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/app_version_txv" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:textStyle="bold"
                android:padding="2dp"
                android:textColor="@color/black_light"
                android:textSize="16sp"
                android:text="@string/app_name"
                android:shadowColor="#ffffffff"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
            <TextView
                android:id="@+id/release_date_txv" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:textColor="@color/black_light"
                android:textSize="16sp"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:shadowColor="#ffffffff"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="2"/>
            <LinearLayout
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                android:background="@drawable/list_single"
                android:layout_marginTop="4dp">
                <TextView
                    android:id="@+id/quanguo_suggest_version_txv" 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black_dark"
                    android:textSize="16sp"
                    android:text="@string/app_name"
                    android:gravity="left|center_vertical"/>
                <TextView
                    android:id="@+id/city_suggest_version_txv" 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black_dark"
                    android:textSize="16sp"
                    android:text="@string/app_name"
                    android:gravity="left|center_vertical"/>
				<TextView
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content" 
				    android:layout_marginLeft="8dp"
				    android:layout_marginTop="12dp"
				    android:textColor="@color/black_dark"
				    android:textSize="16sp"
				    android:text="@string/about_me"
				    android:gravity="left|center_vertical"/>
	            <TextView
	                android:id="@+id/web_txv" 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content" 
	                android:layout_marginLeft="8dp"
	                android:layout_marginTop="12dp"
	                android:textColor="@color/black_dark"
	                android:textSize="16sp"
	                android:text="@string/about_web"
	                android:autoLink="web"
	                android:gravity="left|center_vertical"/>
	             <TextView
	                android:id="@+id/weibo_txv" 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content" 
	                android:layout_marginLeft="8dp"
	                android:layout_marginTop="12dp"
	                android:textColor="@color/black_dark"
	                android:textSize="16sp"
	                android:text="@string/about_weibo"
	                android:autoLink="web"
	                android:gravity="left|center_vertical"/>
	             <TextView
	                android:id="@+id/bbs_txv" 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content" 
	                android:layout_marginLeft="8dp"
	                android:layout_marginTop="12dp"
	                android:textColor="@color/black_dark"
	                android:textSize="16sp"
	                android:text="@string/about_bbs"
	                android:autoLink="web"
	                android:gravity="left|center_vertical"/>
                <TextView
                    android:id="@+id/qq_txv" 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black_dark"
                    android:textSize="16sp"
                    android:singleLine="false"
                    android:text="@string/about_qq"
                    android:gravity="left|center_vertical"/>
                <TextView
                    android:id="@+id/email_txv" 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black_dark"
                    android:textSize="16sp"
                    android:text="@string/about_email"
                    android:gravity="left|center_vertical"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
	                <TextView
	                    android:id="@+id/telephone_txv" 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/black_dark"
	                    android:textSize="16sp"
	                    android:text="@string/about_telephone"
	                    android:gravity="left|center_vertical"
	                    android:layout_marginRight="8dp"/>
                    <ImageView
                        android:layout_marginTop="4dp"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@drawable/user_center_divider_v" />
                    <Button
			            android:id="@+id/telephone_btn" 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content" 
			            android:background="@drawable/ic_telephone_btn"
			            android:drawablePadding="8dp"
			            android:gravity="left|center_vertical"/>
                </LinearLayout>
           </LinearLayout>
           <TextView
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content" 
			    android:padding="8dp"
			    android:textColor="@color/black_light"
			    android:textSize="16sp"
			    android:text="@string/about_right"
			    android:shadowColor="@android:color/white"
			    android:shadowRadius="2"
			    android:gravity="left|center_vertical"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

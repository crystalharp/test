<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="400dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    >
	<LinearLayout android:id="@+id/titlePanel"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
    	android:background="@color/dialog_btn_white"
	    >
	    <TextView android:id="@+id/title_txv" 
	        android:text="@string/app_name"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:textColor="@color/orange"
	        android:textSize="18sp"
	        android:padding="8dp"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content" />
	    <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bg_orange_line" />
	</LinearLayout>
    <LinearLayout android:id="@+id/contentPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
    	android:background="@color/dialog_btn_white">
        <ScrollView android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView android:id="@+id/message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_dark"
                android:padding="4dip" 
		         android:textSize="16sp"
		         android:text="@string/app_name"
		         android:layout_gravity="center_vertical"
                android:gravity="left"/>
        </ScrollView>
    </LinearLayout>
        
    <FrameLayout android:id="@+id/customPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
    	android:background="@color/dialog_btn_white">
    </FrameLayout>
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_line_split"
        android:layout_gravity="center_vertical" />
    <LinearLayout android:id="@+id/buttonPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
    	android:background="@color/dialog_btn_white">     
        
	    <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        android:scaleType="fitXY"
	        android:gravity="fill_horizontal"
	        android:src="@drawable/bg_line_split"/>
	        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:background="@drawable/bg_dialog_btn">
            <Button android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_dialog" 
                android:maxLines="2"
	            android:textSize="14sp"
                android:textColor="@color/black_dark"
                android:gravity="center"
                android:text="@string/app_name"/>
            <ImageView android:id="@+id/split_imv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_split"
                android:layout_gravity="center_vertical" />
            <Button android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_dialog"
                android:maxLines="2"
	        	android:textSize="14sp"
                android:textColor="@color/black_dark"
                android:visibility="visible"
                android:gravity="center"
                android:text="@string/app_name"/>
        </LinearLayout>
     </LinearLayout>
</LinearLayout>

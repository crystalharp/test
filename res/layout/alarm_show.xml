<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center"
    >
	<LinearLayout android:id="@+id/titlePanel"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
    	android:background="@drawable/bg_dialog_header"
	    >
	    <TextView android:id="@+id/title_txv" 
	        android:text="@string/app_name"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:textColor="@color/black_light"
	        android:textSize="18sp"
	        android:paddingLeft="24dp"
	        android:paddingRight="8dp"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content" />
	</LinearLayout>
    <LinearLayout android:id="@+id/contentPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
    	android:background="@drawable/bg_dialog_body">
        <ScrollView android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView android:id="@+id/message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_dark"
                android:paddingLeft="8dip" 
                android:paddingTop="8dip" 
                android:paddingRight="8dip" 
		        android:textSize="16sp"
		        android:text="@string/app_name"
		        android:layout_gravity="center_vertical"
                android:gravity="left"/>
        </ScrollView>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/buttonPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
    	android:background="@drawable/bg_dialog_footer"
    	android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
    	>
        <Button android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dialog_confirm" 
            android:paddingLeft="24dp"
            android:paddingTop="12dp"
            android:paddingRight="24dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/app_name"/>
     </LinearLayout>
</LinearLayout>

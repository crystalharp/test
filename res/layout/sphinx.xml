<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/root_view"
    android:gravity="top|left"
    android:orientation="vertical"
    android:background="@color/normal_background"
    >

    <com.tigerknows.map.MapView
        android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
    
    <RelativeLayout 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:background="@color/normal_background">
    </RelativeLayout>
    
    <FrameLayout
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        >
    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        >
    </FrameLayout>

    <ImageView
        android:id="@+id/compass_imv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_view"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_compass_arrow"
        />
        
    <TextView
        android:id="@+id/download_txv"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:text="@string/map_download_tip"
        android:layout_below="@id/title_view"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/control_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_view"
        android:layout_above="@id/bottom_view"
        android:visibility="visible"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">
        
        <ImageButton
            android:id="@+id/more_btn"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/btn_location_map"
            android:src="@drawable/ic_map_tools"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:scaleType="center"
            android:clickable="false"/>
        
        <ImageView
            android:id="@+id/more_imv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/more_btn"
            android:layout_alignTop="@id/more_btn"
            android:background="@drawable/menu_upgrade"
            android:clickable="false"/>
        
        <ImageButton
            android:id="@+id/clear_map_btn"
            android:layout_below="@id/more_btn"
            android:layout_alignParentRight="true"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/btn_location_map"
            android:src="@drawable/ic_map_tools"/>

        <LinearLayout 
            android:id="@+id/location_view"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/btn_location_map"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/location_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location_normal"
                android:background="@color/transparent"
                android:scaleType="center"
                android:clickable="false"/>
            <TextView 
                android:id="@+id/location_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location_text"
                android:textSize="8sp"/>
        </LinearLayout>
        
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/zoomview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_above="@id/location_view"
            />

    </RelativeLayout>
   
    <FrameLayout
        android:id="@+id/body_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_view"
        android:layout_below="@id/title_view"
        android:visibility="visible"
        >
    </FrameLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:id="@+id/hint_root_view"
        android:visibility="gone"
        android:background="@color/black_transparent_half">
    </RelativeLayout>

    
</RelativeLayout>

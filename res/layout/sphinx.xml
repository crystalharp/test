<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/root_view"
    android:gravity="top|left"
    android:orientation="vertical"
    android:background="@color/normal_background"
    >

    <com.tigerknows.map.MapView
        android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
    
    <RelativeLayout 
        android:id="@+id/map_over_view"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:background="@color/normal_background">
        <ImageView 
            android:id="@+id/center_token_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bubble_a_normal"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>
    </RelativeLayout>
    
    <FrameLayout
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        >
    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        >
    </FrameLayout>

    <ImageView
        android:id="@+id/compass_imv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_view"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_compass_arrow"
        />

    <RelativeLayout
        android:id="@+id/control_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_view"
        android:layout_above="@id/bottom_view"
        android:visibility="visible"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">
        
        <RelativeLayout 
            android:id="@+id/map_tools_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp">
            
            <ImageButton
                android:id="@+id/map_tools_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/btn_map_tools"
                android:scaleType="center"
                android:clickable="false"/>
            
            <ImageView
                android:id="@+id/map_tools_imv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_new"
                android:clickable="false"/>
        </RelativeLayout>
        
        <ImageButton
            android:id="@+id/map_clean_btn"
            android:layout_below="@id/map_tools_view"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_map_clean"
            />

        <LinearLayout 
            android:id="@+id/location_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_location_map"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/location_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_normal"
                android:background="@color/transparent"
                android:scaleType="center"
                android:clickable="false"/>
            <TextView 
                android:id="@+id/location_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:lineSpacingExtra="0dp"
                android:includeFontPadding="false"
                android:text="@string/location_text"
                android:textSize="8sp"/>
        </LinearLayout>
        
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/zoomview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_above="@id/location_view"
            android:layout_marginBottom="8dp"
            />

    </RelativeLayout>
   
    <FrameLayout
        android:id="@+id/body_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_view"
        android:layout_below="@id/title_view"
        android:visibility="visible"
        >
    </FrameLayout>
    
</RelativeLayout>

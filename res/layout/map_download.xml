<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal|top">
    <include android:id="@+id/title_view"
        layout="@layout/title" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
        
    <LinearLayout
        android:id="@+id/tab_view"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_view"
        android:weightSum="2" >
        <Button
            android:id="@+id/download_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"  
            android:text="@string/download_manage"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@drawable/btn_tab_focused" />
        <Button
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"  
            android:text="@string/city_list"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@drawable/btn_tab"  />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/download_view"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
        android:layout_below="@id/tab_view"
	    android:gravity="center_horizontal|top">

	    <TextView
	        android:id="@+id/off_line_txv"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:background="@android:color/black"
	        android:gravity="center"
	        android:text="@string/off_line_"
	        android:textColor="@android:color/white"/>
    
	    <ListView android:id="@+id/download_city_lsv"
	        android:layout_width="fill_parent" 
	        android:layout_height="fill_parent"
	        android:layout_above="@id/off_line_txv"
	        android:padding="0dp"
	        android:scrollingCache="false"
	        android:divider="@drawable/divider"
	        android:drawSelectorOnTop="false"
	        android:fadingEdge="none" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/add_view"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
        android:layout_below="@id/tab_view"
	    android:gravity="center_horizontal|top"
	    android:visibility="gone">
	    <RelativeLayout
	        android:id="@+id/input_view"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:paddingLeft="5dp"
	        android:paddingTop="6dp"
	        android:paddingRight="5dp"
	        android:paddingBottom="6dp"
	        android:gravity="left|center_vertical"
	        android:background="@color/bg_bar">
	        <EditText
	            android:id="@+id/input_edt"
	            android:layout_width="fill_parent" 
	            android:layout_height="wrap_content"
	            android:paddingLeft="32dp"
	            android:background="@drawable/textfield"
	            android:hint="@string/input_city_name_or_first_char"
	            android:textSize="15sp"
	            android:textColorHint="#ffacacac"
	            android:gravity="left|center_vertical"
	            android:singleLine="true"
	            android:imeOptions="actionDone">
	         </EditText>
	        <ImageView
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:src="@drawable/icon_search"
	            android:layout_centerVertical="true"
	            android:editable="false">
	         </ImageView>
	    </RelativeLayout>
	    
	    <ExpandableListView android:id="@+id/add_city_elv"
	        android:layout_width="fill_parent" 
	        android:layout_height="fill_parent"
	        android:layout_below="@id/input_view"
	        android:layout_above="@id/off_line_txv"
	        android:padding="0dp"
	        android:scrollingCache="false"
	        android:childDivider="@drawable/divider"
	        android:divider="@drawable/divider"
	        android:drawSelectorOnTop="false"
	        android:fadingEdge="none" />
	            
	    <ListView android:id="@+id/suggest_city_lsv"
	        android:layout_width="fill_parent" 
	        android:layout_height="fill_parent"
	        android:layout_below="@id/input_view"
	        android:layout_above="@id/off_line_txv"
	        android:padding="0dp"
	        android:scrollingCache="false"
	        android:divider="@drawable/divider"
	        android:drawSelectorOnTop="false"
	        android:fadingEdge="none"
	        android:visibility="gone"
	         />
    </RelativeLayout>
</RelativeLayout>

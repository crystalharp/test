<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@drawable/list_middle"
    android:orientation="vertical" >

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	
	    <RelativeLayout
	        android:id="@+id/book_block"
	        android:layout_width="80dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:paddingTop="6dp"
	        android:paddingBottom="10dp"
	        >

		    <TextView
		        android:id="@+id/price_unit"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/price_txv"
		        android:layout_alignParentRight="true"
		        android:paddingBottom="2dp"
		        android:text="@string/rmb"
		        android:textSize="12sp" />
        
		    <TextView
		        android:id="@+id/price_txv"
		        android:layout_toLeftOf="@id/price_unit"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="18sp"
		        android:textColor="@color/orange"
		        android:text="199" />
		    
		
		    <Button
		        android:id="@+id/book_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:background="@drawable/btn_hotel_book"
		        android:layout_below="@id/price_txv"
		        android:layout_alignParentRight="true"
		        />

	    </RelativeLayout>
	
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/book_block"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:paddingTop="6dp"
	        android:paddingBottom="10dp"
	        >
	
	        <TextView
	            android:id="@+id/room_type_txv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginTop="4dp"
	            android:layout_marginBottom="4dp"
	            android:textColor="@color/black"
	            android:textSize="14sp"
	            android:text="@string/app_name" />
	        
		    <TextView 
		        android:id="@+id/guarantee_txv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@id/room_type_txv"
	            android:textSize="14sp"
	            android:textColor="@color/text_gray"
		        android:layout_marginLeft="4dp"
		        android:background="@drawable/bg_need_guarantee"
		        android:text="@string/hotel_room_need_guarantee"
		        />
	        
	        <TextView 
	            android:id="@+id/room_subtitle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/room_type_txv"
	            android:textSize="14sp"
	            android:textColor="@color/text_gray"
	            android:text="@string/app_name"
	            />
	
	        <TextView
	            android:id="@+id/room_detail_txv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/room_subtitle"
	            android:textSize="14sp"
	            android:textColor="@color/text_gray"
	            android:text="@string/app_name" />
	
	    </RelativeLayout>

    </RelativeLayout>
    
    <ImageView
	    android:id="@+id/list_separator_imv" 
	    android:layout_height="wrap_content" 
	    android:layout_width="fill_parent"
	    android:layout_marginTop="-1dp"
	    android:background="@drawable/bg_line_split"
	></ImageView>

</LinearLayout>
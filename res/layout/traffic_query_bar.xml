<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/bg_title" >
    
	<ImageButton android:id="@+id/back_btn"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/btn_title"
	    android:src="@drawable/ic_back"
	    android:gravity="center"
    	android:visibility="gone"/>

    <RadioGroup android:id="@+id/traffic_rgp"
     	android:layout_width="wrap_content"
     	android:layout_height="wrap_content" 
     	android:layout_gravity="center"
     	android:orientation="horizontal" >
	    <RadioButton
	        android:button="@drawable/rdb_bus"
	        android:layout_width="50dp" 
	        android:layout_height="wrap_content"
	        android:id="@+id/traffic_transfer_rbt"
	        android:checked="true" />
	    <RadioButton
	        android:button="@drawable/rdb_drive"
	        android:layout_width="50dp" 
	        android:layout_height="wrap_content"
	        android:id="@+id/traffic_drive_rbt" />
	    <RadioButton
	        android:button="@drawable/rdb_walk"
	        android:layout_width="50dp" 
	        android:layout_height="wrap_content"
	        android:id="@+id/traffic_walk_rbt"/>
		<RadioButton
	        android:button="@drawable/rdb_busline"
	        android:layout_width="50dp" 
	        android:layout_height="wrap_content"
	        android:id="@+id/traffic_busline_rbt"/>
   	</RadioGroup>

	<Button android:id="@+id/query_btn"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:text="@string/query"
       	android:textSize="14sp"
	    android:textColor="@android:color/white"
       	android:gravity="center"
	    android:background="@drawable/btn_title" />

</FrameLayout>
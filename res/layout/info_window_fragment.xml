<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/body_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="left|top"
    android:orientation="vertical"
    android:background="@drawable/btn_home_bottom" >

    <RelativeLayout
        android:id="@+id/message_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <Button
            android:id="@+id/detail_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:background="@drawable/btn_confirm"
            android:text="@string/detail" />

        <TextView
            android:id="@+id/title_txv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/detail_btn"
            android:layout_alignParentTop="true"
            android:paddingTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/black_dark"
            android:textSize="16sp" >
        </TextView>

        <TextView
            android:id="@+id/name_txv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/detail_btn"
            android:layout_below="@id/title_txv"
            android:paddingBottom="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/black_light"
            android:textSize="14sp" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hotel_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-16dp" >

        <TextView
            android:id="@+id/hotel_price_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/poi_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp" >

        <RatingBar
            android:id="@+id/poi_stars_rtb"
            style="@style/RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:numStars="5"
            android:progressDrawable="@drawable/ratingbar_small" />

        <TextView
            android:id="@+id/poi_price_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/poi_stars_rtb"
            android:layout_marginRight="8dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/orange"
            android:textSize="12sp" >
        </TextView>


    </RelativeLayout>
    <include
        android:id="@+id/traffic_plan_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/traffic_group_traffic" />

    <LinearLayout
        android:id="@+id/traffic_step_item"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/step_icon"
            android:background="@drawable/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/step_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="1\n1\n1"
            android:textSize="16sp"
            android:lines="3"
             >
        </TextView>
        
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tuangou_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp" >

        <TextView
            android:id="@+id/tuangou_price_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="2" >

            
        <LinearLayout 
            android:id="@+id/poi_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/btn_dialog_map_tools_left"  >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/black_dark"
                android:drawableLeft="@drawable/ic_infowindow_search_poi"
                android:gravity="center"
                android:text="@string/search_perimeter"/>
        </LinearLayout>
            
        <LinearLayout 
            android:id="@+id/traffic_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/btn_dialog_map_tools_right"  >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/black_dark"
                android:drawableLeft="@drawable/ic_infowindow_search_trafic"
                android:gravity="center"
                android:text="@string/query_line"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

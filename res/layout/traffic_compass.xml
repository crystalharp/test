<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout android:id="@+id/body_rly" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black_dark"
        >
	    <Button android:id="@+id/gps_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:text="@string/app_name"
	        android:drawableRight="@drawable/icon_arrow_right"
	        android:background="@drawable/btn_compass_gps"
	        android:drawablePadding="16dp"
	        android:layout_centerHorizontal="true"
	        android:textSize="16sp"
	        android:padding="8dp"
	        android:layout_marginBottom="20dp"
	        />
	    <LinearLayout android:id="@+id/compass_3_lly" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@id/gps_btn"
	        android:background="@drawable/transparent_bg"
	        android:padding="4dp"
	        android:layout_marginBottom="12dp"
	        >
	        <TextView android:id="@+id/satellite_txv"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/compass_satellite"
	            android:paddingLeft="@dimen/compass_text_left_margin"
	            android:textColor="@color/black_light"
	            />
	        <TextView android:id="@+id/accuracy_txv"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/compass_accuracy"
	            android:paddingLeft="@dimen/compass_text_left_2_margin"
	            android:textColor="@color/black_light"
	            />
	    </LinearLayout>
	    <LinearLayout android:id="@+id/compass_2_lly" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@id/compass_3_lly"
	        android:background="@drawable/transparent_bg"
	        android:padding="4dp"
	        >
	        <TextView android:id="@+id/altitude_txv"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/compass_altitude"
	            android:paddingLeft="@dimen/compass_text_left_margin"
	            android:textColor="@color/black_light"
	            />
	        <TextView android:id="@+id/speed_txv"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/compass_speed"
	            android:paddingLeft="@dimen/compass_text_left_2_margin"
	            android:textColor="@color/black_light"
	            />        
	    </LinearLayout>
	    <LinearLayout android:id="@+id/compass_1_lly" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@id/compass_2_lly"
	        android:background="@drawable/transparent_bg"
	        android:padding="4dp"
	        >
	        <TextView android:id="@+id/longitude_txv"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/compass_longitude"
	            android:paddingLeft="@dimen/compass_text_left_margin"
	            android:paddingTop="12dp"
	            android:textColor="@color/black_light"
	            />
	        <TextView android:id="@+id/latitude_txv"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/compass_latitude"
	            android:paddingLeft="@dimen/compass_text_left_2_margin"
	            android:paddingTop="12dp"
	            android:textColor="@color/black_light"
	            />
	    </LinearLayout>
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_alignParentTop="true"
	        android:layout_above="@id/compass_1_lly"
		    android:paddingBottom="12dp"
	        android:background="@color/white"
	        >
		    <TextView android:id="@+id/sun_compass_hint_txv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/compass_sun_hint"
		        android:singleLine="false"
		        android:paddingLeft="48dp"
		        android:paddingRight="48dp"
		        android:layout_alignParentBottom="true"
		        android:textColor="@color/black_light"
		        />  	        
		    <ImageView android:id="@+id/compass_imv"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:src="@drawable/ani_compass_sun"
		        android:layout_above="@id/sun_compass_hint_txv"
		        android:layout_marginTop="16dp"
		        android:layout_marginLeft="16dp"
		        android:layout_marginRight="16dp"		        
		        android:scaleType="fitCenter"
		        />
		
		    <ImageView android:id="@+id/compass_bg_imv"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:src="@drawable/bg_compass"
		        android:layout_above="@id/sun_compass_hint_txv"
		        android:layout_marginTop="16dp"
		        android:layout_marginLeft="16dp"
		        android:layout_marginRight="16dp"
		        android:scaleType="fitCenter"
		        />

	    </RelativeLayout>
    </RelativeLayout>
    <Button android:id="@+id/left_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_close"
        android:layout_margin="8dp"
        >
    </Button>
    <Button android:id="@+id/right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_share"
        android:layout_margin="8dp"
        >
    </Button>
    
</RelativeLayout>
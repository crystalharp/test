<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#fff3f2f2">

    <RelativeLayout
        android:id="@+id/title_rll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_alignParentTop="true"       
        android:background="@drawable/bg_title"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <Button
            android:id="@+id/logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:background="@drawable/btn_confirm"
            />

        <Button
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/send"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:focusable="true"
            android:background="@drawable/btn_confirm"
            />

        <TextView
            android:id="@+id/title_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_tiger_user"
            android:layout_toRightOf="@id/logout_btn"
            android:layout_toLeftOf="@id/send_btn"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black_dark"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/bottom_rll"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >
        <ImageView 
            android:id="@+id/pic_imv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true" />
        <LinearLayout
            android:id="@+id/text_limit_unit_lnl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@drawable/del_word_bg"
            android:focusable="true"
            android:clickable="true" >
            <TextView
	            android:id="@+id/text_limit_txv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="140"
	            android:layout_marginRight="3dp"
	            android:textColor="@color/white"/>
            <ImageView
                android:src="@drawable/del_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    
    <EditText
	    android:id="@+id/text_edt"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@id/title_rll"
	    android:layout_above="@id/bottom_rll"
	    android:background="@null"
	    android:hint="@string/share_text_hint"
	    android:capitalize="sentences"
	    android:imeOptions="actionDone"
	    android:maxLength="140"
	    android:gravity="top|left"
	    android:isScrollContainer="true"
	    android:textColor="@color/black"
	    android:layout_margin="2dp"/>
</RelativeLayout>

<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:gravity="center"
    android:background="@color/gray_light" >
	<ImageView 
        android:id="@+id/shadow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/bg_shadow" />
    	
    <LinearLayout android:id="@+id/top_view"
        android:layout_below="@id/shadow1"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray_light" >
        <LinearLayout
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:padding="8dp" >
	        <TextView android:id="@+id/name_txv"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/black"
	            android:textSize="18sp"
	            android:gravity="center_vertical|left" >
	        </TextView>
	        
	        <TextView android:id="@+id/length_txv"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="4dp"
	            android:textColor="@color/text_hint_gray"
	            android:textSize="16sp"
	            android:singleLine="true"
	            android:ellipsize="end"
	            android:gravity="center_vertical|left" >
	        </TextView>
			
	        <TextView android:id="@+id/time_txv"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="4dp"
	            android:textColor="@color/text_hint_gray"
	            android:textSize="16sp"
	            android:gravity="center_vertical|left" >
	        </TextView>
      	</LinearLayout>
      	<ImageView 
	        android:id="@+id/shadow2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/white"
	        android:scaleType="fitXY"
	        android:src="@drawable/bg_line_split" />
    </LinearLayout>
    
    <include android:id="@+id/bottom_buttons_view"
        android:layout_alignParentBottom="true"
        layout="@layout/bottom_buttons_view" />
 	
    <ListView android:id="@+id/result_lsv"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:layout_below="@id/top_view"
        android:layout_above="@id/bottom_buttons_view"
        android:fadingEdge="none"
        android:drawSelectorOnTop="false"
        android:scrollingCache="false"
		android:divider="@drawable/bg_line_split"
		android:background="@color/gray_dark" />

</RelativeLayout>

<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:fadingEdge="none">
    <LinearLayout
        android:orientation="vertical" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:padding="0dp"
        android:gravity="top|center_horizontal"
        android:background="#fff3f2f2" >
            
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/weibo_logon_title_bg"
            android:gravity="center_vertical" >
            <ImageView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:paddingLeft="22dp"
                android:src="@drawable/weibo_logo"
                android:layout_alignParentLeft="true"></ImageView>
            <TextView
                android:id="@+id/register_txv"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:paddingRight="22dp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="@string/weibo_no_username"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
            
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <RelativeLayout
                android:id="@+id/introduction_lnl"
                android:orientation="vertical" 
                android:layout_width="fill_parent"
                android:layout_height="90dp" 
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:gravity="center_vertical" >
                <ImageView 
                    android:id="@+id/icon_imv"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon"
                    android:layout_alignParentRight="true"></ImageView>
                <ImageView 
                    android:id="@+id/arrow_imv"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:src="@drawable/weibo_arrow"
                    android:layout_toLeftOf="@id/icon_imv"></ImageView>
                    
                <TextView
                    android:id="@+id/introduction_txv"
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:text="@string/woibo_introduction"
                    android:layout_toLeftOf="@id/arrow_imv" />
            </RelativeLayout>
            <EditText
                android:id="@+id/username_edt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:gravity="top"
                android:layout_marginTop="5dp"
                android:maxLength="50"
                android:singleLine="true"
                android:hint="@string/weibo_username"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/introduction_lnl">
            </EditText>
                    
            <EditText
                android:id="@+id/password_edt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:gravity="top"
                android:layout_marginTop="5dp"
                android:maxLength="50"
                android:singleLine="true"
                android:password="true"
                android:hint="@string/password"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/username_edt">
            </EditText>
            
            <Button android:id="@+id/cancel_btn"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="80dp" 
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:gravity="center_horizontal|center_vertical"
                android:layout_alignParentRight="true"
                android:layout_below="@id/password_edt" 
                android:background="@drawable/btn_weibo_cancel"/>
                
            <Button android:id="@+id/logon_btn"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="80dp" 
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_height="wrap_content"
                android:text="@string/authorize"
                android:gravity="center_horizontal|center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/password_edt" 
                android:background="@drawable/btn_weibo_auth"/>
        
            <LinearLayout
                android:orientation="horizontal" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:padding="0dp"
                android:gravity="center_vertical" 
                android:layout_alignParentLeft="true"
                android:layout_below="@id/logon_btn"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp" >
                <CheckBox android:id="@+id/friendships_cbx"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:checked="true"
                    >
                </CheckBox>
                
                <TextView
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/weibo_friendships"
                    android:layout_toRightOf="@id/friendships_cbx"
                    android:layout_below="@id/logon_btn"
                    android:layout_gravity="center_vertical"  />
            </LinearLayout>
        </RelativeLayout>
                    
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
               
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/root_view">
    <RelativeLayout
	    android:id="@+id/title_view"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingRight="8dp"
	    android:background="@drawable/bg_title"
	    >
	    <RelativeLayout
	        android:id="@+id/left_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:paddingRight="4dp"
	        >
	
	        <Button android:id="@+id/left_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:background="@drawable/btn_back"
	            android:textSize="14sp"
	            android:textColor="@color/btn_title"
	            android:gravity="center"
	            />
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:id="@+id/right_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        >
	
	        <Button android:id="@+id/right_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:background="@color/transparent"
	            android:textSize="14sp"
	            android:textColor="@color/btn_title"
	            android:gravity="center"
	            />
	    </RelativeLayout>
	
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_centerVertical="true"
	        android:gravity="center"
	        >
		    <Button 
		        android:id="@+id/title_login_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/btn_all_comment"
		        android:padding="0dp"
		        android:text="@string/title_user_login"
		        android:textSize="14sp"
		        android:textColor="@color/black_dark"
		        android:gravity="center"
		        android:singleLine="true"
		        android:ellipsize="end"
		        >
		     </Button>
		
		    <Button 
		        android:id="@+id/title_regist_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/btn_hot_comment"
		        android:padding="0dp"
		        android:text="@string/title_user_regist"
		        android:textSize="14sp"
		        android:textColor="@color/black_dark"
		        android:gravity="center"
		        android:singleLine="true"
		        android:ellipsize="end"
		        >
		     </Button>
	     </LinearLayout>
	</RelativeLayout>        
    <ScrollView android:id="@+id/login_scv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_view"
        android:background="@color/gray_dark" >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" >
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <com.tigerknows.ui.user.ExtValidationEditText
                    android:id="@+id/login_phone_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:digits="0123456789"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:background="@drawable/list_header_normal"
                    emptyErrorTip="@string/phone_empty_tip"
                    flag="0"
                    formatErrorTip="@string/phone_format_error_tip"
                    android:hint="@string/please_input_phone"
                    android:inputType="phone"
                    validateType="phone" >
                </com.tigerknows.ui.user.ExtValidationEditText>
                
                <RelativeLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >
	                <com.tigerknows.ui.user.ExtValidationEditText
	                    android:id="@+id/login_password_edt"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:paddingLeft="16dp"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    android:textSize="16sp"
	                    android:maxLength="16"
                        android:background="@drawable/list_footer_normal"
	                    emptyErrorTip="@string/password_empty_tip"
	                    validateType="password"
	                    formatErrorTip="@string/password_format_error_tip"
	                    flag="1"
	                    android:hint="@string/please_input_password"
	                    android:inputType="textPassword" /> 
		            <TextView
		                android:id="@+id/forget_password_txt"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:paddingRight="8dp"
		                android:layout_centerVertical="true"
		                android:text="@string/forget_password"
		                android:textColor="#009CFF"
		                android:textSize="14sp" />	                                       
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:background="@drawable/btn_hotel_book" 
	                android:shadowDx="0"
	                android:shadowDy="1"
	                android:shadowColor="#a77a00"
	                android:shadowRadius="1"
                />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/regist_scv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_view"
        android:background="@color/gray_dark"
        android:visibility="gone"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" >
            <com.tigerknows.ui.user.ExtValidationEditText
                android:id="@+id/regist_phone_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:maxLength="11"
                android:digits="0123456789"
                android:ellipsize="end"
                android:textSize="16sp"
                android:hint="@string/please_input_11_phone"
                android:background="@drawable/list_header_normal"
                flag="0"
                validateType="phone"
                emptyErrorTip="@string/phone_empty_tip"
                formatErrorTip="@string/phone_format_error_tip" >
            </com.tigerknows.ui.user.ExtValidationEditText>
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_middle_normal">
                <com.tigerknows.ui.user.CountDownButton
                    android:id="@+id/vali_num_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:text="@string/reqest_validate_num"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:background="@drawable/btn_valicode" />
                <com.tigerknows.ui.user.ExtValidationEditText
                    android:id="@+id/vali_num_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/vali_num_btn"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="4"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:hint="@string/please_input_4_validate_num"
                    android:background="@drawable/transparent_bg"
                    flag="1"
                    validateType="validnum"
                    emptyErrorTip="@string/code_empty_tip" />
            </RelativeLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.tigerknows.ui.user.ExtValidationEditText
                    android:id="@+id/regist_password_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:paddingLeft="16dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:maxLength="16"
                    android:hint="@string/please_input_616_password"
                    android:background="@drawable/list_middle_normal"
                    flag="2"
                    validateType="password"
                    emptyErrorTip="@string/password_empty_tip"
                    formatErrorTip="@string/password_format_error_tip"
                    unionFlag="3"
                    unionErrorTip="@string/password_union_error_tip" />
                <com.tigerknows.ui.user.ExtValidationEditText
                    android:id="@+id/re_password_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:paddingLeft="16dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:maxLength="16"
                    android:hint="@string/please_input_616_password_again"
                    android:background="@drawable/list_footer_normal"
                    flag="3"
                    validateType="repassword"
                    emptyErrorTip="@string/re_password_empty_tip" />
            </LinearLayout>
            <Button
                android:id="@+id/regist_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:text="@string/regist"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_hotel_book" 
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowColor="#a77a00"
                android:shadowRadius="1"
                />
        </LinearLayout>
    </ScrollView>    
</RelativeLayout>

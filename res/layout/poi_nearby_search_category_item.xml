<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"    >
    <Button android:id="@+id/category_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:drawableRight="@drawable/icon_arrow_right"
        android:background="@drawable/list_header_title"
        android:layout_marginBottom="4dp"
        />
    <LinearLayout android:id="@+id/sub_alpha_lly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <Button android:id="@+id/sub_0_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category"
            android:padding="8dp"
            android:layout_margin="4dp"
            />
        <Button android:id="@+id/sub_1_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category"
            android:padding="8dp"
            android:layout_margin="4dp"
            />
        <Button android:id="@+id/sub_2_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category"
            android:padding="8dp"
            android:layout_margin="4dp"
            />                
    </LinearLayout>
    <LinearLayout android:id="@+id/sub_beta_lly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button android:id="@+id/sub_3_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category"
            android:padding="8dp"
            android:layout_margin="4dp"
            />
        <Button android:id="@+id/sub_4_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category"
            android:padding="8dp"
            android:layout_margin="4dp"
            />
        <Button android:id="@+id/sub_5_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category"
            android:padding="8dp"
            android:layout_margin="4dp"
            />                
    </LinearLayout>    
    <LinearLayout android:id="@+id/sub_more_lly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button android:id="@+id/sub_6_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category"
            android:padding="8dp"
            android:layout_margin="4dp"
            />
        <Button android:id="@+id/sub_7_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category"
            android:padding="8dp"
            android:layout_margin="4dp"
            />
        <Button android:id="@+id/sub_more_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/more"
            android:background="@drawable/btn_sub_category"
            android:padding="8dp"
            android:layout_margin="4dp"
            />                
    </LinearLayout>
</LinearLayout>
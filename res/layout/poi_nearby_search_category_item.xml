<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingTop="12dp">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
	    <Button android:id="@+id/category_btn"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/app_name"
	        android:drawableRight="@drawable/icon_arrow_right"
	        android:background="@drawable/btn_category"
	        android:paddingLeft="16dp"
	        android:paddingTop="8dp"
	        android:paddingBottom="8dp"
	        android:textSize="18sp"
	        android:gravity="left|center_vertical"
	        android:drawablePadding="8dp"
	        />
  
    </LinearLayout>

    <LinearLayout android:id="@+id/sub_alpha_lly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <Button android:id="@+id/sub_0_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category_1"
            android:padding="8dp"
            />
        <Button android:id="@+id/sub_1_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category_1"
            android:padding="8dp"
            />
        <Button android:id="@+id/sub_2_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category_2"
            android:padding="8dp"
            />                
    </LinearLayout>
    <LinearLayout android:id="@+id/sub_beta_lly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button android:id="@+id/sub_3_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category_1"
            android:padding="8dp"
            />
        <Button android:id="@+id/sub_4_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category_1"
            android:padding="8dp"
            />
        <Button android:id="@+id/sub_5_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category_2"
            android:padding="8dp"
            />                
    </LinearLayout>    
    <LinearLayout android:id="@+id/sub_more_lly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button android:id="@+id/sub_6_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category_1"
            android:padding="8dp"
            />
        <Button android:id="@+id/sub_7_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:background="@drawable/btn_sub_category_1"
            android:padding="8dp"
            />
        <Button android:id="@+id/sub_more_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/more"
            android:background="@drawable/btn_sub_category_2"
            android:padding="8dp"
            />                
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:background="@drawable/list_selector_background_gray_light"
    android:padding="0dp">
    
    <ImageView android:id="@+id/room_reserve_icon_imv" 
        android:layout_width="36dp"
        android:layout_height="28dp" 
        android:layout_alignParentRight="true"
        android:paddingRight="8dp"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitXY"
        android:src="@drawable/rdb_recovery"
        android:visibility="visible" 
        android:contentDescription="@string/app_name"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/room_reserve_icon_imv"
        android:orientation="vertical"
        >
	    <TextView android:id="@+id/room_reserve_txv" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingTop="12dp"
	        android:paddingBottom="8dp"
	        android:paddingLeft="8dp"
            android:textSize="16sp"
	        android:text="@string/app_name"
	        android:singleLine="true"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:gravity="left" 
	        />

	    <TextView android:id="@+id/need_credit_txv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/orange"
	        android:paddingLeft="8dp"
	        android:paddingBottom="12dp"
	        android:textSize="14sp"
	        android:text="@string/hotel_room_credit_note"
	        android:focusable="false"
	        android:singleLine="false"
	        android:focusableInTouchMode="false"
	        android:visibility="gone"
	        />
	</LinearLayout>
</RelativeLayout>
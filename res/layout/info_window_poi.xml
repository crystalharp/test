<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:padding="4dp"
    >
    <RelativeLayout
        android:id="@+id/body_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:id="@+id/name_txv"
            android:text="@string/app_name"
            android:textColor="@color/black_dark"
            android:singleLine="true"
            android:ellipsize="end"
            >
        </TextView>
        
        <RatingBar android:id="@+id/stars_rtb"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/name_txv"
            android:progressDrawable="@drawable/ratingbar_small"
            style="@style/RatingBar.Small"
            android:numStars="5"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginRight="8dp"
            />
        
        <TextView 
            android:id="@+id/price_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/stars_rtb"
            android:layout_below="@id/name_txv"
            android:text="@string/app_name"
            android:textColor="@color/orange"
            android:singleLine="true"
            android:textSize="12sp"
            >
        </TextView>
            
    </RelativeLayout>
    <View android:id="@+id/view2"
        android:background="@color/infowindow_split_line"
        android:layout_height="fill_parent"
        android:layout_width="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"
        >
    </View>
    <Button 
        android:id="@+id/traffic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_goto_here"
        android:contentDescription="@string/app_name"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        />
</LinearLayout>

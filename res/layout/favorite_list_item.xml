<?xml version="1.0" encoding="utf-8"?>
        
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_background_gray_light">
    
	<RelativeLayout android:id="@+id/right_view"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
	    <CheckBox 
	        android:id="@+id/select_chb" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:button="@drawable/btn_check" /> 
	    
	    <ImageView 
	        android:id="@+id/rename_imv" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:background="@drawable/ic_rename" /> 
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/text_txv" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_toLeftOf="@id/right_view"
        android:layout_centerVertical="true"
        android:paddingLeft="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:text="@string/app_name"
        android:singleLine="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="left" /> 
</RelativeLayout>
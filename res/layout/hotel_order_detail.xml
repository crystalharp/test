<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tkandroid ="http://schemas.android.com/apk/res/com.tigerknows"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/normal_background"
    >
	<LinearLayout
        android:id="@+id/panel_btns"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
	    android:weightSum="3">
	    
	    <Button android:id="@+id/btn_issue_comment" 
	        android:layout_weight="1"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_bottom"
	        android:paddingTop="8dp"
	        android:paddingBottom="8dp"
	        android:drawableTop="@drawable/ic_issue_comment"
	        android:text="@string/issue_comment"
	        android:textSize="12sp"
	        android:gravity="center"/>
	                
	    <Button android:id="@+id/btn_order_again" 
	        android:layout_weight="1"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_bottom"
	        android:paddingTop="8dp"
	        android:paddingBottom="8dp"
	        android:drawableTop="@drawable/ic_order_again"
	        android:text="@string/order_again"
	        android:textSize="12sp"
	        android:gravity="center"/>
	    
	    <Button android:id="@+id/btn_delete_order" 
	        android:layout_weight="1"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_bottom"
	        android:paddingTop="8dp"
	        android:paddingBottom="8dp"
	        android:drawableTop="@drawable/ic_delete_order"
	        android:text="@string/delete_order"
	        android:textSize="12sp"
	        android:gravity="center"/>
	</LinearLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        
        android:layout_alignParentTop="true"
        android:layout_above="@id/panel_btns"
        
        android:orientation="vertical">
	    
	    <com.tigerknows.ui.hotel.NavigationWidget
	        android:id="@+id/navigation_widget"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentBottom="true"
	        tkandroid:navigationState="3"
	        >
	    </com.tigerknows.ui.hotel.NavigationWidget>
		
	    <ScrollView
	        android:id="@+id/body_scv"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        
	        android:layout_above="@id/navigation_widget"
	        
	        android:scrollbars="vertical"
	        android:gravity="top"
	        android:fillViewport="true"
	        android:fadingEdge="none"
	        
	        >
	
	        <LinearLayout
	            android:orientation="vertical"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            >
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/hotel_checkin_note"
			        android:textSize="18sp"
			        android:textColor="@color/black_dark"
	                android:layout_marginLeft="8dp"
	                android:layout_marginRight="8dp"
	                android:layout_marginTop="8dp"
	                android:padding="8dp"
	                />
	    	    <include
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                layout="@layout/discover_tuangou_fendian_list_item"
	                android:id="@+id/hotel_fendian_poi"/>
	             
	            <RelativeLayout
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="12dp"
	                android:layout_marginLeft="8dp"
	                android:layout_marginRight="8dp"
	                android:layout_marginTop="4dp"
	                android:padding="8dp" 
	                android:background="@drawable/list_single">
	                
	                <TextView
	                    android:id="@+id/order_id"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_below="@id/hotel_fendian_poi"
	                    android:layout_marginTop="8dp"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_light"
	                    android:textSize="16sp"
	                    android:text="@string/hotel_order_id"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	                
	                <TextView
	                    android:id="@+id/order_id_txv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_toRightOf="@id/order_id"
	                    android:layout_below="@id/hotel_fendian_poi"
	                    android:layout_marginTop="8dp"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_dark"
	                    android:textSize="16sp"
	                    android:text="@string/hotel_order_id"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	                
	                <Button 
	                    android:id="@+id/btn_cancel_order"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_alignParentRight="true"
	                    android:layout_marginRight="4dp"
	                    android:layout_below="@id/hotel_fendian_poi"
	                    
	                    android:gravity="center"
	                    android:text="@string/cancel_order"
	                    android:textSize="14sp"
	                    android:textColor="@color/black_dark"
	                    
	                    android:padding="12dp"
	                    android:background="@drawable/btn_subway_busstop"/>
	
	                <TextView
	                    android:id="@+id/order_state"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_below="@id/order_id_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:ellipsize="end"
	                    android:focusable="false"
	                    android:maxLines="2"
	                    android:singleLine="false"
	                    android:text="@string/hotel_order_state"
	                    android:textColor="@color/black_light"
	                    android:textSize="16sp" />
	                
	                <TextView
	                    android:id="@+id/order_state_txv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_toRightOf="@id/order_state"
	                    android:layout_below="@id/order_id_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:ellipsize="end"
	                    android:focusable="false"
	                    android:maxLines="2"
	                    android:singleLine="false"
	                    android:text="订单状态"
	                    android:textColor="@color/black_dark"
	                    android:textSize="16sp" />
	
	                <TextView
	                    android:id="@+id/order_time"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_below="@id/order_state_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_light"
	                    android:textSize="16sp"
	                    android:text="@string/hotel_order_time"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	
	                <TextView
	                    android:id="@+id/order_time_txv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_toRightOf="@id/order_time"
	                    android:layout_below="@id/order_state_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_dark"
	                    android:textSize="16sp"
	                    android:text="预订日期"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	                
	                <TextView
	                    android:id="@+id/order_total_fee"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_below="@id/order_time_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_light"
	                    android:textSize="16sp"
	                    android:text="@string/hotel_order_gross"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	                
	                <TextView
	                    android:id="@+id/order_total_fee_txv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_toRightOf="@id/order_total_fee"
	                    android:layout_below="@id/order_time_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_dark"
	                    android:textSize="16sp"
	                    android:text="订单总额"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	
	                <TextView
	                    android:id="@+id/pay_type"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_below="@id/order_total_fee"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_light"
	                    android:textSize="16sp"
	                    android:text="@string/hotel_pay_type"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	
	                <TextView
	                    android:id="@+id/pay_type_txv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_toRightOf="@id/pay_type"
	                    android:layout_below="@id/order_total_fee"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_dark"
	                    android:textSize="16sp"
	                    android:text="付款方式"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	
	                <TextView
	                    android:id="@+id/checkin_date"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_below="@id/pay_type_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_light"
	                    android:textSize="16sp"
	                    android:text="@string/checkin_date"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	
	                <TextView
	                    android:id="@+id/checkin_date_txv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_toRightOf="@+id/checkin_date"
	                    android:layout_below="@id/pay_type_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_dark"
	                    android:textSize="16sp"
	                    android:text="入住日期"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	                
	                <TextView
	                    android:id="@+id/checkout_date"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_below="@id/checkin_date_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_light"
	                    android:textSize="16sp"
	                    android:text="@string/checkout_date"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	                
	                <TextView
	                    android:id="@+id/checkout_date_txv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_toRightOf="@id/checkout_date"
	                    android:layout_below="@id/checkin_date_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_dark"
	                    android:textSize="16sp"
	                    android:text="离店日期"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	                
	                <TextView
	                    android:id="@+id/retention_date"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_below="@id/checkout_date_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_light"
	                    android:textSize="16sp"
	                    android:text="@string/retention_date"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	                
	                <TextView
	                    android:id="@+id/retention_date_txv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_toRightOf="@id/checkout_date"
	                    android:layout_below="@id/checkout_date_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_dark"
	                    android:textSize="16sp"
	                    android:text="保留日期"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	                
	                <TextView
	                    android:id="@+id/room_type"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_below="@id/retention_date_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_light"
	                    android:textSize="16sp"
	                    android:text="@string/room_type"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	                
	                <TextView
	                    android:id="@+id/room_type_txv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_toRightOf="@id/room_type"
	                    android:layout_below="@id/retention_date_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_dark"
	                    android:textSize="16sp"
	                    android:text="入住房型"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	                
	                <TextView
	                    android:id="@+id/checkin_person"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_below="@id/room_type_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_light"
	                    android:textSize="16sp"
	                    android:text="@string/checkin_person"
	                    android:singleLine="true"
	                    android:focusable="false"
	                    />
	                
	                <TextView
	                    android:id="@+id/checkin_person_txv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_toRightOf="@id/checkin_person"
	                    android:layout_below="@id/room_type_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    
	                    android:textColor="@color/black_dark"
	                    android:textSize="16sp"
	                    android:text="入  住  人"
	                    android:singleLine="false"
	                    android:focusable="false"
	                    />
	                <TextView
	                    android:id="@+id/come_from_txv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    
	                    android:layout_below="@id/checkin_person_txv"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginBottom="8dp"
	                    android:textColor="@color/orange"
	                    android:textSize="12sp"
	                    android:text="@string/come_from_colon"
	                    android:singleLine="false"
	                    android:focusable="false"
	                    />            
	            </RelativeLayout>
	             
	         </LinearLayout>
	         
	    </ScrollView>
	    
	
    </RelativeLayout>
    
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:padding="4dp"
    >
    <ImageView 
        android:id="@+id/icon_imv"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:background="@drawable/icon"
        android:scaleType="fitXY"
        />
        
    <RelativeLayout
        android:id="@+id/body_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="15sp"
            android:id="@+id/name_txv"
            android:text="@string/app_name"
            android:textColor="@color/black_dark"
            android:maxLines="2"
            android:minLines="2"
            android:ellipsize="end"
            >
        </TextView>
        
        <TextView 
            android:id="@+id/price_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/name_txv"
            android:text="@string/app_name"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="18sp"
            android:singleLine="true"
            >
        </TextView>

        <TextView
            android:id="@+id/rmb_text_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_txv"
            android:layout_toRightOf="@id/price_txv"
            android:layout_alignBaseline="@id/price_txv"
            android:textColor="@color/black_light"
            android:textSize="14sp"
            android:text="@string/rmb_text"
            android:singleLine="true"
            android:focusable="false"
            />
            
    </RelativeLayout>
    <View android:id="@+id/view2"
        android:background="@color/black_light"
        android:layout_height="fill_parent"
        android:layout_width="1dp"
        android:layout_marginRight="8dp"
        >
    </View>
    <Button 
        android:id="@+id/traffic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_goto_here"
        android:contentDescription="@string/app_name"
        />
</LinearLayout>

<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tkandroid ="http://schemas.android.com/apk/res/com.tigerknows"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_discover"
    >
    
    <ScrollView android:id="@+id/hotel_order_write_scv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical">
       
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="4dp"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/list_header"
                >
                <TextView android:id="@+id/hotel_name_txv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingLeft="16dp"
                    android:textSize="18sp"
                    android:text="@string/app_name"
                    />
                <TextView android:id="@+id/roomtype_txv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"
                    android:text="@string/app_name"
                    android:textColor="@color/orange"
                    />
                <TextView android:id="@+id/roomtype_detail_txv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/black_light"
                    android:textSize="14sp"
                    android:text="@string/app_name"
                    />
                <TextView android:id="@+id/room_date_txv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="12dp"
                    android:textSize="14sp"
                    android:text="@string/app_name"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
            	android:layout_marginBottom="12dp"
                android:background="@drawable/bg_sawtooth" /> 
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left|center_vertical"
                android:background="@drawable/list_header"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/black_dark"
                    android:textSize="16sp"
                    android:text="@string/hotel_room_howmany"
                    android:gravity="left|center_vertical"
                    />
                <Button android:id="@+id/room_howmany_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:padding="8dp"
                    android:drawableRight="@drawable/ic_view_all_comment"
                    android:textColor="@color/orange"
                    android:textSize="16sp"
                    android:text="@string/app_name"
                    android:gravity="right|center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left|center_vertical"
                android:background="@drawable/list_header"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/black_dark"
                    android:textSize="16sp"
                    android:text="@string/hotel_room_reserve"
                    android:gravity="left|center_vertical"
                    />
                <Button android:id="@+id/room_reserve_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:padding="8dp"
                    android:drawableRight="@drawable/ic_view_all_comment"
                    android:textColor="@color/orange"
                    android:textSize="16sp"
                    android:text="@string/app_name"
                    android:gravity="right|center_vertical"
                    />
            </LinearLayout>

            <LinearLayout android:id="@+id/person_name_lly"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                >
	            <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:gravity="left|center_vertical"
	                android:background="@drawable/list_header"
	                >
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:padding="8dp"
	                    android:textColor="@color/black_dark"
	                    android:textSize="16sp"
	                    android:text="@string/hotel_room_person_name"
	                    android:gravity="left|center_vertical"
	                    />
	                <EditText android:id="@+id/room_person_edt"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:maxLength="50"
	                    android:textSize="16sp"
	                    android:focusable="true"
	                    android:focusableInTouchMode="true"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    android:background="@color/transparent"
	                    android:inputType="none"
	                    />
	            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left|center_vertical"
                android:background="@drawable/list_header"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/black_dark"
                    android:textSize="16sp"
                    android:text="@string/hotel_room_mobile_nubmer"
                    android:gravity="left|center_vertical"
                    />
                <EditText android:id="@+id/room_mobile_number_edt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="11"
                    android:textSize="16sp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:background="@color/transparent"
                    android:inputType="phone"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_line_split"
                android:contentDescription="@string/app_name"
                />
            <Button android:id="@+id/submit_order_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_query_hotel_normal"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="@string/submit_order"
                android:gravity="center"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                    />
        </LinearLayout>
        
    </ScrollView>
    <com.tigerknows.ui.hotel.NavigationWidget
        android:id="@+id/navigation_widget"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        tkandroid:navigationState="2"
        >
    </com.tigerknows.ui.hotel.NavigationWidget>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <include android:id="@+id/title_lnl" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" 
        layout="@layout/traffic_query_bar" />
    
    <FrameLayout android:id="@+id/content_frl" 
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_lnl" >
    	<include android:id="@+id/content_lnl" layout="@layout/traffic_query_input_block" />
    </FrameLayout>

  	<LinearLayout 
  	    android:id="@+id/suggest_lnl"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:layout_below="@id/content_frl"
	    android:background="@color/gray_dark"
	    android:visibility="gone" >
  	    <ListView android:id="@+id/suggest_lsv"
	        android:layout_width="fill_parent" 
	        android:layout_height="fill_parent"
	        android:scrollingCache="false"
	        android:fadingEdge="none"
	        android:padding="0dp"
	        android:divider="@drawable/bg_real_line" />
  	</LinearLayout>
   
</RelativeLayout>
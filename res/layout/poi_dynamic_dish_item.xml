<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/list_single"
    >
    <TextView
        android:id="@+id/name_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/picture_view"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="@color/black_dark"
        android:textSize="16sp"
        android:text="@string/app_name"
        android:singleLine="true"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:includeFontPadding="false"
        android:focusable="false"
        />

    <TextView
        android:id="@+id/price_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/name_txv"
        android:text="@string/app_name"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:focusable="false"
        />
    
    <TextView
        android:id="@+id/commend_txv" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:layout_below="@id/name_txv"
        android:drawableLeft="@drawable/ic_commend_enabled"
        android:gravity="center"
        android:textColor="@color/black_light"
        android:textSize="12sp"
        android:autoLink="none"
        android:text="@string/app_name"
        android:singleLine="true"
        android:ellipsize="end"/>
</RelativeLayout>

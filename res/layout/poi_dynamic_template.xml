<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/title_view" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/list_header_title"
        >
	    <TextView
	        android:id="@+id/title_right_txv" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:paddingRight="8dp"
	        android:gravity="right|center_vertical"
	        android:drawableRight="@drawable/icon_arrow_right"
	        android:textColor="@color/text_gray"
	        android:text="@string/app_name"
	        android:textSize="14sp"
	        android:clickable="false"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        />
        <TextView
            android:id="@+id/title_txv"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/title_right_txv"
	        android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textSize="16sp"
            android:padding="8dp" />
    </RelativeLayout>
    <LinearLayout android:id="@+id/list_view"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    </LinearLayout>
    <LinearLayout android:id="@+id/more_view"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/list_footer"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/more_txv"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:drawableRight="@drawable/icon_arrow_down" />
    </LinearLayout>

</LinearLayout>
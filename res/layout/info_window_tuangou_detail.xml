<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/body_view"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:padding="4dp"
    >
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        >
        
        <TextView 
            android:id="@+id/name_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:text="@string/app_name"
            android:textColor="@color/black_dark"
            android:singleLine="true"
            android:ellipsize="end"
            >
        </TextView>
        
        <TextView 
            android:id="@+id/address_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/name_txv"
            android:textSize="14sp"
            android:text="@string/app_name"
            android:textColor="@color/black_light"
            android:singleLine="true"
            android:ellipsize="end"
            >
        </TextView>
            
    </RelativeLayout>
    <View android:id="@+id/view2"
        android:background="@color/infowindow_split_line"
        android:layout_height="fill_parent"
        android:layout_width="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        >
    </View>
    <ImageButton 
        android:id="@+id/traffic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_goto_here"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        />
</LinearLayout>

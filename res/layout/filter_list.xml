<?xml version="1.0" encoding="utf-8"?>
       
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black_transparent_half"
    >
    
    <LinearLayout android:id="@+id/control_view"
        android:padding="0dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
        >
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/body_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/control_view"
        android:orientation="vertical"
        android:paddingBottom="64dp"
        >
        <LinearLayout android:id="@+id/title_view"
	        android:padding="0dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/white"
	        android:gravity="center"
	        android:orientation="horizontal"
	        >
	    </LinearLayout>
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_below="@id/control_view"
	        android:orientation="horizontal"
	        android:weightSum="2"
	        >
	        <RelativeLayout
	            android:id="@+id/parent_view"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
		        android:background="@drawable/list_selector_background_gray_dark">
		        <ListView android:id="@+id/parent_lsv"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:padding="0dp"
		            android:dividerHeight="0dp"
		            android:divider="@drawable/bg_line_split"
		            android:drawSelectorOnTop="false"
		            android:scrollingCache="false"
		            android:footerDividersEnabled="false"
		            android:fadingEdge="none"
		            android:scrollbars="none"
		            />
	        </RelativeLayout>
	        <RelativeLayout
	            android:id="@+id/child_view"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
		        android:background="@drawable/list_selector_background_gray_light">
		        <com.tigerknows.widget.PinnedHeaderBladeListView android:id="@+id/child_lsv"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            />
	        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

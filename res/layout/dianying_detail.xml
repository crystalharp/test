<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:background="@drawable/bg_discover">
        	
    <ScrollView
        android:id="@+id/body_scv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:gravity="top"
        android:fillViewport="true"
        android:fadingEdge="none">
    
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp">
		    <RelativeLayout 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                >
			    <ImageView 
			        android:id="@+id/picture_imv" 
			        android:layout_width="135dp"
			        android:layout_height="180dp" 
			        android:layout_gravity="center_horizontal"
			        android:padding="4dp"
			        android:layout_marginLeft="8dp"
			        android:scaleType="fitXY"
                    android:background="@drawable/bg_picture_dianying_detail" /> 
			    
			    <com.tigerknows.view.AlwaysMarqueeTextView android:id="@+id/name_txv"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:layout_toRightOf="@id/picture_imv"
			        android:layout_marginLeft="10dp"
			        android:textColor="@android:color/black"
			        android:textSize="16sp"
			        android:text="@string/distance"
			        android:singleLine="true"
			        android:scrollHorizontally="true" 
	                android:ellipsize="marquee"
			        android:focusable="false"></com.tigerknows.view.AlwaysMarqueeTextView>
	    
               <RatingBar android:id="@+id/stars_rtb"
                   android:layout_width="wrap_content"
                   android:layout_height="18dp"
			       android:layout_toRightOf="@id/picture_imv"
			       android:layout_below="@id/name_txv"
			       android:layout_marginLeft="10dp"
			       android:layout_marginTop="5dip"
                   android:progressDrawable="@drawable/ratingbar_small"
                   style="@style/RatingBar.Small"
                   android:numStars="5"
			       android:focusable="false"
			       android:focusableInTouchMode="false" />
			       
			    <TextView 
			        android:id="@+id/director_txv" 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:layout_toRightOf="@id/picture_imv"
			        android:layout_below="@id/stars_rtb"
			        android:layout_marginLeft="10dp"
			        android:layout_marginTop="5dip"
			        android:textColor="@android:color/black"
			        android:textSize="14sp"
			        android:text="@string/distance"
			        android:singleLine="true"
			        android:focusable="false" /> 
			       
			    <TextView 
			        android:id="@+id/main_actor_txv" 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:layout_toRightOf="@id/picture_imv"
			        android:layout_below="@id/director_txv"
			        android:layout_marginLeft="10dp"
			        android:textColor="@android:color/black"
			        android:textSize="14sp"
			        android:text="@string/distance"
			        android:singleLine="false"
			        android:ellipsize="end"
			        android:maxLines="2"
			        android:focusable="false" /> 
			       
			    <TextView 
			        android:id="@+id/tag_txv" 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:layout_toRightOf="@id/picture_imv"
			        android:layout_below="@id/main_actor_txv"
			        android:layout_marginLeft="10dp"
			        android:textColor="@android:color/black"
			        android:textSize="14sp"
			        android:text="@string/distance"
			        android:singleLine="true"
			        android:focusable="false" /> 
			       
			    <TextView 
			        android:id="@+id/country_txv" 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:layout_toRightOf="@id/picture_imv"
			        android:layout_below="@id/tag_txv"
			        android:layout_marginLeft="10dp"
			        android:textColor="@android:color/black"
			        android:textSize="14sp"
			        android:text="@string/distance"
			        android:singleLine="true"
			        android:focusable="false" /> 
			       
			    <TextView 
			        android:id="@+id/length_txv" 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:layout_toRightOf="@id/picture_imv"
			        android:layout_below="@id/country_txv"
			        android:layout_marginLeft="10dp"
			        android:textColor="@android:color/black"
			        android:textSize="14sp"
			        android:text="@string/distance"
			        android:singleLine="true"
			        android:focusable="false" /> 
			       
			    <TextView 
			        android:id="@+id/start_time_txv" 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:layout_toRightOf="@id/picture_imv"
			        android:layout_below="@id/length_txv"
			        android:layout_marginLeft="10dp"
			        android:textColor="@android:color/black"
			        android:textSize="14sp"
			        android:text="@string/distance"
			        android:singleLine="true"
			        
			        android:focusable="false" /> 
            </RelativeLayout>
            
		    <include
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        layout="@layout/dianying_fendian_list_item"
		        android:id="@+id/dianying_fendian_list_item"
		         />
		    
		    <RelativeLayout 
                android:id="@+id/nearby_fendian_view"
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"               
                android:layout_marginTop="8dp"
	        	android:layout_marginRight="8dp"
	        	android:layout_marginLeft="8dp"
	        	android:layout_marginBottom="8dp"     
                android:background="@drawable/list_single"
                android:gravity="center_vertical"
                >
                
                <TextView
                    android:id="@+id/look_all_txv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:layout_alignParentRight="true"
	                android:gravity="left|center_vertical"
	                android:layout_marginRight="8dp"
	                android:drawableRight="@drawable/icon_arrow_right"
                    android:text="@string/dianying_detail_nearby_btn" 
                    android:textColor="@color/bright_foreground_light"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/nearby_fendian_txv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_toLeftOf="@id/look_all_txv"
	                android:gravity="left|center_vertical"
	                android:layout_marginLeft="8dp"
                    android:text="@string/dianying_detail_nearby" 
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    />
             </RelativeLayout>   
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" 
                 android:layout_alignParentRight="true"
                 android:layout_marginTop="15dip"
                 android:layout_marginLeft="16dp"
                 android:layout_marginRight="16dp"
                 android:gravity="left|center_vertical"
                 
                 android:text="@string/dianying_detail_introduce" 
                 android:textColor="@android:color/black"
                 android:textSize="16sp"
                 />
             <ImageView
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content" 
            	android:background="@drawable/divider"
            	android:layout_marginTop="8dp"
            	android:layout_marginBottom="8dp"
            	android:layout_marginLeft="12dp"
            	android:layout_marginRight="12dp"/>
             <TextView
                 android:id="@+id/description_txv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" 
                 android:layout_alignParentRight="true"
                 android:layout_marginLeft="16dp"
                 android:layout_marginRight="16dp"
                 android:gravity="left|center_vertical"
                 android:text="@string/app_name" 
                 android:textColor="@color/bright_foreground_light"
                 android:textSize="14sp"
                 /> 
         </LinearLayout>
    </ScrollView>
        
    <include
        android:id="@+id/loading_view"
	    layout="@layout/loading_small"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp">
	</include> 
</RelativeLayout>
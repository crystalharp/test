<?xml version="1.0" encoding="utf-8"?>
       
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_background_gray_light">
	<RelativeLayout
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:padding="8dp">
	    <TextView
	        android:id="@+id/author_txv" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true" 
	        android:paddingBottom="6dp"
	        android:textColor="@android:color/black"
	        android:textSize="14sp"
	        android:gravity="left|center_vertical"
	        android:lineSpacingExtra="0dp"
	        android:includeFontPadding="false"
	        android:text="@string/app_name"/>
	    <RatingBar android:id="@+id/grade_rtb"
	        android:layout_width="wrap_content"
	        android:layout_height="18dp"
	        android:layout_below="@id/author_txv"
	        android:padding="0dp"
	        android:progressDrawable="@drawable/ratingbar_small"
	        style="?android:attr/ratingBarStyleSmall"
	        android:numStars="5" />
	    <TextView
	        android:id="@+id/date_txv" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_below="@id/author_txv"
	        android:layout_alignParentRight="true"
	        android:textColor="@android:color/black"
	        android:textSize="12sp"
	        android:gravity="center_vertical|right"
	        android:text="@string/app_name"/>
	    <TextView
	        android:id="@+id/comment_txv" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" 
	        android:layout_alignParentLeft="true"
	        android:layout_below="@id/grade_rtb"
	        android:textColor="@color/text_gray"
	        android:lineSpacingMultiplier="1.2"
	        android:paddingTop="6dp"
	        android:textSize="14sp"
	        android:text="@string/app_name" />
	    <TextView
	        android:id="@+id/src_txv" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_alignParentLeft="true"
	        android:layout_below="@id/comment_txv"
	        android:textColor="#ffacacac"
	        android:textSize="12sp"
	        android:autoLink="none"
	        android:text="@string/app_name"
	        android:singleLine="true"
	        android:ellipsize="end"/>
    </RelativeLayout>
</RelativeLayout>

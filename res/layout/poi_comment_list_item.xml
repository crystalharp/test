<?xml version="1.0" encoding="utf-8"?>
       
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_background_gray_light">
	<RelativeLayout
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:paddingLeft="8dp"
	    android:paddingTop="10dp"
	    android:paddingRight="8dp"
	    android:paddingBottom="6dp">
	    <TextView
	        android:id="@+id/author_txv" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true" 
	        android:paddingBottom="6dp"
	        android:textColor="@color/black_light"
	        android:textSize="14sp"
	        android:gravity="left|center_vertical"
	        android:lineSpacingExtra="0dp"
	        android:includeFontPadding="false"
	        android:text="@string/app_name"/>
	    <LinearLayout
	        android:id="@+id/commend_view" 
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_alignParentRight="true"
	        android:gravity="center_vertical"
	        android:background="@drawable/btn_subway_busstop">
		    <TextView
		        android:id="@+id/commend_txv" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:layout_marginLeft="32dp"
		        android:layout_marginTop="8dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginBottom="8dp"
		        android:textColor="@color/black_light"
		        android:textSize="12sp"
		        android:autoLink="none"
		        android:text="@string/app_name"
		        android:singleLine="true"
		        android:ellipsize="end"/>
	    </LinearLayout>
	    <ImageView
	        android:id="@+id/commend_imv" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:src="@drawable/ic_commend_disabled"
	        android:background="@color/transparent"
	        android:layout_marginTop="4dp"
	        android:layout_alignParentRight="true"/>
	    <RatingBar android:id="@+id/grade_rtb"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/author_txv"
	        android:padding="0dp"
	        android:progressDrawable="@drawable/ratingbar_small"
	        style="@style/RatingBar.Small"
	        android:numStars="5" />
	    <TextView
	        android:id="@+id/avg_txv" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_below="@id/author_txv"
	        android:layout_toRightOf="@id/grade_rtb"
	        android:paddingLeft="16dp"
            android:lineSpacingExtra="0dp"
            android:includeFontPadding="false"
	        android:textColor="@color/orange"
	        android:textSize="14sp"
	        android:gravity="center_vertical|right"
	        android:text="@string/app_name"/>
	    <TextView
	        android:id="@+id/comment_txv" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" 
	        android:layout_alignParentLeft="true"
	        android:layout_below="@id/grade_rtb"
	        android:textColor="@color/black_dark"
	        android:lineSpacingMultiplier="1.2"
	        android:paddingTop="6dp"
	        android:textSize="14sp"
	        android:text="@string/app_name" />
	    <TextView
	        android:id="@+id/date_txv" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_alignParentLeft="true"
	        android:layout_below="@id/comment_txv"
	        android:textColor="@color/black_light"
	        android:textSize="12sp"
	        android:gravity="center_vertical|left"
	        android:text="@string/app_name"/>
	    <TextView
	        android:id="@+id/src_txv" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_alignParentLeft="true"
	        android:layout_below="@id/date_txv"
	        android:textColor="@color/black_light"
	        android:textSize="12sp"
	        android:autoLink="none"
	        android:text="@string/app_name"
	        android:singleLine="true"
	        android:ellipsize="end"/>
    </RelativeLayout>
</RelativeLayout>

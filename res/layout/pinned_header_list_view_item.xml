<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_background_gray_dark"
    android:orientation="vertical" 
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/item_header_parent"
        android:layout_width="fill_parent"
        android:layout_height="32dip"
        android:background="#ffebebeb"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_header_text"
            android:layout_width="wrap_content"
            android:layout_height="32dip"
            android:layout_gravity="top"
            android:gravity="center"
            android:paddingTop="2dip"
            android:textColor="#323232"
            android:textSize="16sp" 
            android:text="@string/app_name"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <ImageView 
            android:id="@+id/icon_imv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_right"
            android:focusable="false" />
            
        <TextView
            android:id="@+id/text_txv"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/icon_imv"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/black_light"
            android:text="@string/app_name"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>
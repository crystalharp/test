<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:background="@drawable/list_selector_background_gray_light"
   android:paddingLeft="8dp"
   android:paddingTop="14dp"
   android:paddingRight="8dp"
   android:paddingBottom="14dp" >
   
   <ImageView
       android:id="@+id/picture_imv"
       android:layout_width="80dp"
       android:layout_height="100dp"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:layout_marginRight="8dp"
       android:layout_marginLeft="5dp"
       android:padding="6dp"
       android:scaleType="fitXY"
       android:background="@drawable/bg_picture" />

   <TextView
       android:id="@+id/name_txv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_toRightOf="@id/picture_imv"
       
       android:layout_marginTop="2dip" 
       android:focusable="false"
       android:includeFontPadding="false"
       android:lineSpacingExtra="2dp"
       android:paddingBottom="5dp"
       android:singleLine="true"
       android:text="@string/app_name"
       android:textColor="@color/black"
       android:textSize="16sp" />

   <RatingBar android:id="@+id/stars_rtb"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"     
       android:padding="0dp"
       android:layout_toRightOf="@id/picture_imv"
       
       android:layout_below="@id/name_txv" 
       android:progressDrawable="@drawable/ratingbar_small"
       style="@style/RatingBar.Small"
       android:numStars="5"
       android:focusable="false"
       android:focusableInTouchMode="false" /> 
   

   <TextView
       android:id="@+id/distance_txv"
       
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@id/address_txv"
       android:layout_alignParentRight="true"
       
       android:focusable="false"
       android:singleLine="true"
       android:text="@string/distance"
       android:textColor="@color/black_light"
       android:textSize="14sp" /> 
    
    <TextView 
        android:id="@+id/distance_from_txv" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
       android:layout_alignBaseline="@id/address_txv"
        android:layout_toLeftOf="@id/distance_txv" 
        android:layout_marginTop="4dp"
        android:drawableRight="@drawable/ic_location_nearby"
        android:textColor="@color/black_light"
        android:textSize="14sp"
        android:text="@string/distance"
        android:singleLine="true"
        android:focusable="false" />   

   <TextView
       android:id="@+id/date_txv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@id/stars_rtb"
       android:layout_below="@id/stars_rtb"
       android:layout_marginTop="10dip"
       android:layout_toLeftOf="@id/distance_txv"
       android:paddingRight="10dp"
       android:drawableLeft="@drawable/ic_discover_date"
       android:drawablePadding="4dp"   
       android:focusable="false"
       android:singleLine="true"
       android:text="@string/distance"
       android:textColor="@color/bright_foreground_light"
       android:textSize="14sp" />       
       
 <TextView
       android:id="@+id/address_txv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@id/stars_rtb"
       android:layout_below="@id/date_txv"
       android:layout_toLeftOf="@id/distance_from_txv"
       android:paddingRight="10dp"
       android:drawableLeft="@drawable/ic_discover_address"
       android:drawablePadding="4dp"
       android:focusable="false"
       android:singleLine="true"
       android:text="@string/distance"
       android:textColor="@color/bright_foreground_light"
       android:textSize="14sp" />

</RelativeLayout>

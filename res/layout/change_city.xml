<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal|top" >
    <include android:id="@+id/title_view"
        layout="@layout/title" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
        
    <RelativeLayout
        android:id="@+id/input_view"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_below="@id/title_view"
        android:paddingLeft="5dp"
        android:paddingTop="6dp"
        android:paddingRight="5dp"
        android:paddingBottom="6dp"
        android:gravity="left|center_vertical"
        android:background="@color/bg_bar">
        <EditText
            android:id="@+id/input_edt"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:background="@drawable/textfield"
            android:hint="@string/input_city_name_or_first_char"
            android:textSize="15sp"
            android:textColorHint="#ffacacac"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:imeOptions="actionDone">
         </EditText>
        <ImageView
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/icon_search"
            android:layout_centerVertical="true"
            android:editable="false">
         </ImageView>
    </RelativeLayout>
     
    <TextView
        android:id="@+id/current_city_txv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_view"
        android:gravity="left"
        android:text="@string/current_city_"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:background="#ff00aeff"
        android:padding="5dp"/> 

    <ImageView
        android:id="@+id/shadow_imv"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_below="@id/input_view"
        android:src="@drawable/bg_shadow"
        android:editable="false">
     </ImageView>      
             
    <ExpandableListView android:id="@+id/city_elv"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:layout_below="@id/current_city_txv"
        android:dividerHeight="0dp"
        android:childDivider="@drawable/divider"
        android:divider="@drawable/divider"
        android:padding="0dp"
        android:background="@android:color/white"
        android:scrollingCache="false"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none" />
            
    <ListView android:id="@+id/suggest_city_lsv"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:layout_below="@id/current_city_txv"
        android:padding="0dp"
        android:dividerHeight="0dp"
        android:divider="@drawable/divider"
        android:background="@android:color/white"
        android:scrollingCache="false"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:visibility="gone"
         />
        
</RelativeLayout>
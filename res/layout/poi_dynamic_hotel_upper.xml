<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tkandroid ="http://schemas.android.com/apk/res/com.tigerknows"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <LinearLayout android:id="@+id/dynamic_hotel_view"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
         >
        
         <RelativeLayout
             android:id="@+id/check_view"
             android:layout_width="fill_parent"
             android:layout_height="64dp"
             android:orientation="horizontal"
             android:background="@drawable/list_single"
             android:paddingLeft="8dp"
             android:paddingTop="14dp"
             android:paddingRight="8dp"
             android:paddingBottom="8dp"
             android:textColor="@color/black_dark"
             android:textSize="16sp"
             android:gravity="left|center_vertical"
             >
          <TextView
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:drawablePadding="8dp"
              android:drawableLeft="@drawable/ic_date_hotel"
              android:drawableRight="@drawable/icon_arrow_right"
              android:background="@color/transparent"
              android:textColor="@color/black_dark"
              android:textSize="16sp"
              android:gravity="center"
              />
          <com.tigerknows.ui.hotel.DateWidget
              android:id="@+id/checkin_dat"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="40dp"
              tkandroid:checkin="入住"
              >
              </com.tigerknows.ui.hotel.DateWidget>
          <ImageView
              android:id="@+id/split_imv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/checkin_dat"
              android:layout_centerVertical="true"
              android:background="@drawable/ic_split_hotel_date"
              />
          <com.tigerknows.ui.hotel.DateWidget
              android:id="@+id/checkout_dat"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/split_imv"
              tkandroid:checkin="离店"
              >
              </com.tigerknows.ui.hotel.DateWidget>
         </RelativeLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_split"
            />
        <LinearLayout android:id="@+id/dynamic_roomtype_list_view"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:orientation="vertical"
            ></LinearLayout>
        <LinearLayout android:id="@+id/dynamic_roomtype_more_view"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/list_footer"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/more_txv"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:text="@string/hotel_expand_roomtype" />

            <ImageView
                android:id="@+id/more_imv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/icon_arrow_down" />

        </LinearLayout>
        <LinearLayout android:id="@+id/dynamic_roomtype_retry_view"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/list_footer"
            android:gravity="center"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/retry_txv"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                 />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
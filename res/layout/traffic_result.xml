<?xml version="1.0" encoding="UTF-8"?>
<!-- 该文件用于交通结果页和交通详情页的页面布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:gravity="center" 
    android:background="@color/gray_light">
	
    <!-- <ImageView 
        android:id="@+id/shadow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/bg_shadow" /> -->
    
    <LinearLayout android:id="@+id/top_view"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@drawable/bg_subtitle"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/traffic_result_sub_title"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
        	android:paddingLeft="8dp"
        	android:paddingTop="2dp"
        	android:paddingRight="8dp"
        	android:paddingBottom="2dp" >
	
	        <TextView android:id="@+id/start_txv"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/app_name"
	            android:textColor="@color/black"
	            android:singleLine="true"
	            android:ellipsize="end"
	            android:gravity="center_vertical|left"
	            android:layout_weight="1"
	            android:layout_gravity="center_vertical">
	        </TextView>
	        
	        <TextView android:id="@+id/end_txv"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/app_name"
	            android:textColor="@color/black"
	            android:visibility="gone"
	            android:singleLine="true"
	            android:ellipsize="end"
	            android:gravity="center_vertical|left"
	            android:layout_marginLeft="6dp"
	            android:layout_weight="1"
	            android:layout_gravity="center_vertical">
	        </TextView>
	    </LinearLayout>
        <RelativeLayout
            android:id="@+id/traffic_detail_sub_title"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
        	android:paddingLeft="8dp"
        	android:paddingTop="2dp"
        	android:paddingRight="8dp"
        	android:paddingBottom="2dp"
        	android:visibility="gone" >
	
	        <TextView 
	            android:id="@+id/length_txv"
	            android:paddingLeft="45dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
		  	    android:layout_centerVertical="true"
		  	    android:layout_alignParentRight="true"
		  	    android:textColor="@color/text_gray"
		  	    android:textSize="12sp"
	            
	            />
	        
	        <TextView android:id="@+id/subtitle_txv"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_toLeftOf="@id/length_txv"
	            android:text="@string/app_name"
	            android:lineSpacingExtra="2dp"
	            android:textColor="@color/black"
	            android:singleLine="false"
	            android:ellipsize="end"
	            android:gravity="center_vertical|left"
	            android:layout_gravity="center_vertical">
	        </TextView>
	        
        </RelativeLayout>
        <!-- <ImageView 
	        android:id="@+id/shadow2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/white"
	        android:scaleType="fitXY"
	        android:src="@drawable/bg_line_split" /> -->
    </LinearLayout>        
	
    <!-- <TextView android:id="@+id/length_txv"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:visibility="gone"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:layout_below="@id/top_view"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:background="#00AEFF"/> -->

    <include android:id="@+id/traffic_detail_foot"
        android:layout_alignParentBottom="true"
        layout="@layout/traffic_fav_share" />

    <ListView android:id="@+id/result_lsv"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:layout_below="@id/top_view"
        android:layout_above="@id/traffic_detail_foot"
        android:fadingEdge="none"
        android:drawSelectorOnTop="false"
        android:scrollingCache="false"
		android:divider="@drawable/bg_line_split" />
    <ImageView 
        android:id="@+id/subtitle_down"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_view"
        android:scaleType="fitXY"
        android:src="@drawable/bg_subtitle_down" />
    
</RelativeLayout>

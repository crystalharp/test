<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background">
    <RelativeLayout
        android:id="@+id/input_view"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="4dp"
        android:paddingRight="5dp"
        android:paddingBottom="4dp"
        android:gravity="left|center_vertical"
        android:background="@color/bg_bar">
        <EditText
            android:id="@+id/input_edt"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:background="@drawable/textfield"
            android:hint="@string/find_poi"
            android:textSize="15sp"
            android:textColorHint="#ffacacac"
            android:editable="false"
            android:gravity="left|center_vertical"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:singleLine="true">
         </EditText>
        <ImageView
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/icon_search"
            android:layout_centerVertical="true"
            android:editable="false">
         </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top">        
	    <com.tigerknows.view.SpringbackListView android:id="@+id/category_lsv"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:drawSelectorOnTop="false"
	        android:scrollingCache="false"
	        android:fadingEdge="none"
	        android:listSelector="@android:color/transparent"
	        android:divider="@android:color/transparent"
	        android:gravity="left|center_vertical"/>
        <com.tigerknows.view.AlwaysMarqueeTextView android:id="@+id/my_location_txv"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
	        android:paddingTop="2dp"
	        android:paddingBottom="2dp"
            android:drawableLeft="@drawable/ic_mylocation_home"
            android:drawablePadding="4dp"
            android:textSize="13sp"
            android:paddingLeft="6dp"
            android:text="@string/location_doing"
            android:textColor="@android:color/white"
            android:background="#88000000"
            android:gravity="left"
            android:scrollHorizontally="true" 
            android:singleLine="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true" 
            android:marqueeRepeatLimit="marquee_forever"></com.tigerknows.view.AlwaysMarqueeTextView>
        <ImageView 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_below="@id/my_location_txv"
            android:background="@drawable/bg_shadow" />
    </RelativeLayout>
</LinearLayout>

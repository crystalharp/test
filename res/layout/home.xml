<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#f7fcff"
    >
    <LinearLayout
        android:id="@+id/input_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:background="#ff9c00"
        >
        <Button
            android:id="@+id/city_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/white"
            android:editable="false"
            android:background="@drawable/btn_title_popup"
            >
        </Button>
        <Button
            android:id="@+id/input_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/btn_input_home"
            android:hint="@string/find_poi"
            >
         </Button>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        >
        <com.tigerknows.view.SpringbackListView android:id="@+id/category_lsv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="false"
            android:scrollingCache="false"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:gravity="left|center_vertical"
            />
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_shadow"
            />
        <Button
            android:id="@+id/refresh_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_refresh"
            />
        <com.tigerknows.view.AlwaysMarqueeTextView android:id="@+id/my_location_txv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/refresh_btn"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:drawablePadding="4dp"
            android:textSize="13sp"
            android:paddingLeft="6dp"
            android:text="@string/location_doing"
            android:textColor="@android:color/white"
            android:background="#88000000"
            android:gravity="left"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            >
        </com.tigerknows.view.AlwaysMarqueeTextView>
    </RelativeLayout>
</LinearLayout>

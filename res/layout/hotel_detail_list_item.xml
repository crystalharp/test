<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@drawable/list_selector_background_gray_light">
    
    <TextView android:id="@+id/price_txv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:text="@string/app_name"
        android:singleLine="true"
        android:gravity="center_horizontal"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"/>
    <TextView android:id="@+id/roomtype_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/price_txv"
        android:layout_toRightOf="@id/price_txv"
        android:textSize="18sp"
        android:text="@string/app_name"
        android:singleLine="true"
        android:padding="6dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        />

</RelativeLayout>
<?xml version="1.0" encoding="UTF-8"?>    
  	
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_above="@id/tip_view"
    android:scrollbars="vertical"
    android:gravity="top"
    android:fillViewport="true"
    android:fadingEdge="none"
    android:background="@color/gray_dark" > 
	<LinearLayout 
    	android:id="@+id/root_view"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
    	android:padding="8dp" >
        <TextView android:id="@+id/nikename_txv" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:layout_gravity="left|center_vertical"
            android:text="@string/app_name"
            android:textColor="#009CFF"
		    android:textSize="18sp" />
        
        <LinearLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">
            <Button
	            android:id="@+id/my_comment_btn" 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" 
	            android:padding="8dp"
	            android:background="@drawable/list_header"
	            android:drawableLeft="@drawable/ic_my_comment"
	            android:drawableRight="@drawable/icon_arrow_right"
	            android:drawablePadding="8dp"
	            android:textColor="@android:color/black"
	            android:textSize="16sp"
	            android:text="@string/my_comment"
	            android:gravity="left|center_vertical"/>
	        <ImageView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/divider" />
	        <Button
	            android:id="@+id/dingdan_btn" 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" 
	            android:padding="8dp"
	            android:background="@drawable/list_footer"
	            android:drawableLeft="@drawable/ic_wodedingdan"
	            android:drawableRight="@drawable/icon_arrow_right"
	            android:drawablePadding="8dp"
	            android:textColor="@android:color/black"
	            android:textSize="16sp"
	            android:text="@string/wodedingdan"
	            android:gravity="left|center_vertical"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">
            <Button
	            android:id="@+id/update_mobile_phone_btn" 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" 
	            android:padding="8dp"
	            android:background="@drawable/list_header"
	            android:drawableRight="@drawable/icon_arrow_right"
	            android:drawablePadding="8dp"
	            android:textColor="@android:color/black"
	            android:textSize="16sp"
	            android:text="@string/change_phone"
	            android:gravity="left|center_vertical"/>
	        <ImageView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/divider" />
	        <Button
	            android:id="@+id/update_nickname_btn" 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" 
	            android:padding="8dp"
	            android:background="@drawable/list_middle"
	            android:drawableRight="@drawable/icon_arrow_right"
	            android:drawablePadding="8dp"
	            android:textColor="@android:color/black"
	            android:textSize="16sp"
	            android:text="@string/change_nickname"
	            android:gravity="left|center_vertical"/>
	        <ImageView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/divider" />
	        <Button
	            android:id="@+id/update_password_btn" 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" 
	            android:padding="8dp"
	            android:background="@drawable/list_footer"
	            android:drawableRight="@drawable/icon_arrow_right"
	            android:drawablePadding="8dp"
	            android:textColor="@android:color/black"
	            android:textSize="16sp"
	            android:text="@string/change_password"
	            android:gravity="left|center_vertical"/>
        </LinearLayout>
        
        <Button
	        android:id="@+id/logout_btn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="8dp"
	        android:layout_marginTop="16dp"
	        android:text="@string/logout_account"
	        android:textSize="18sp"
	        android:textColor="@android:color/white"
	        android:background="@drawable/btn_blue_green" />
        
     </LinearLayout>
</ScrollView>

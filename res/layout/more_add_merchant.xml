<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/normal_background">
    <include android:id="@+id/title_view"
        layout="@layout/title" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="left|top">
        <ScrollView android:id="@+id/add_merchant_scv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical"
            android:gravity="top"
            android:fillViewport="true"
            android:fadingEdge="none">
            <LinearLayout 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout 
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical">
                    <LinearLayout 
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="8dp"
                        android:gravity="left|center_vertical"
                        android:background="@drawable/list_header">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/merchant_name"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/need_star"
                            android:textColor="@color/orange"
                            android:textSize="16sp"/>
                        <EditText android:id="@+id/name_edt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="255"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:background="@color/transparent"/>
                    </LinearLayout>
                    <ImageView 
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_line_split"
                        />
                    <LinearLayout 
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="8dp"
                        android:gravity="left|center_vertical"
                        android:background="@drawable/list_middle">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/merchant_type"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/need_star"
                            android:textColor="@color/orange"
                            android:textSize="16sp"/>
                        <Button android:id="@+id/type_btn"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_dark"
                            android:gravity="left|center_vertical"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:hint="@string/please_select_merchant_type"
                            android:ellipsize="end"
                            android:drawableRight="@drawable/ic_small_triangle_down"
                            android:background="@color/transparent"/>
                    </LinearLayout>
                    
                    <ImageView 
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_line_split"
                        />
                    <LinearLayout 
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="8dp"
                        android:gravity="left|center_vertical"
                        android:background="@drawable/list_middle">
                        
                        <Button
                            android:id="@+id/city_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:drawableRight="@drawable/ic_small_triangle_down"
                            android:background="@color/transparent"
                            android:textSize="16sp"
                            >
                        </Button>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/need_star"
                            android:textColor="@color/orange"
                            android:textSize="16sp"/>
                        <EditText android:id="@+id/address_edt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="255"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:hint="@string/add_merchant_address_hint"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:background="@color/transparent"/>
                    </LinearLayout>
                    
                    <ImageView 
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_line_split"
                        />
                    <LinearLayout 
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="8dp"
                        android:gravity="left|center_vertical"
                        android:background="@drawable/list_footer">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/merchant_telephone"
                            android:textSize="16sp"/>
                        <EditText android:id="@+id/telephone_edt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="15"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:singleLine="true"
                            android:hint="@string/merchant_telephone_hint"
                            android:ellipsize="end"
                            android:background="@color/transparent"
                            android:inputType="phone" />
                    </LinearLayout>
                </LinearLayout>
                
                
                <LinearLayout 
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical">
                    <LinearLayout 
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="8dp"
                        android:gravity="left|center_vertical"
                        android:background="@drawable/list_header">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/address_description"
                            android:textSize="16sp"/>
                        
                        <EditText android:id="@+id/address_description_edt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="255"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:hint="@string/add_merchant_address_description_hint"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:background="@color/transparent"/>
                    </LinearLayout>
                    
                    <ImageView 
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_line_split"
                        />
                    <LinearLayout 
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:gravity="left|center_vertical"
                        android:background="@drawable/list_footer">
                        <LinearLayout 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="left|center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="left|center_vertical"
                                android:text="@string/business_hours"
                                android:textSize="16sp"/>
                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="80dp"
                                android:background="@color/gray_dark"/>
                        </LinearLayout>
                        <LinearLayout 
                            android:layout_width="fill_parent" 
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="left|center_vertical">
                            <Button android:id="@+id/date_btn"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_dark"
                                android:gravity="left|center_vertical"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:paddingLeft="8dp"
                                android:paddingTop="8dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="8dp"
                                android:singleLine="true"
                                android:hint="@string/select_business_hours_day"
                                android:ellipsize="end"
                                android:drawableRight="@drawable/ic_small_triangle_down"
                                android:background="@color/transparent"/>
                            <ImageView 
                                android:layout_width="fill_parent" 
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_line_split"
                                />
                            <Button android:id="@+id/time_btn"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_dark"
                                android:gravity="left|center_vertical"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:paddingLeft="8dp"
                                android:paddingTop="8dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="8dp"
                                android:singleLine="true"
                                android:hint="@string/select_business_hours_time"
                                android:ellipsize="end"
                                android:drawableRight="@drawable/ic_small_triangle_down"
                                android:background="@color/transparent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                
                <RelativeLayout 
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/list_single" >
                    <RelativeLayout 
                        android:id="@+id/thumb_image_view"
                        android:layout_width="80dp" 
                        android:layout_height="80dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal" >
                        <ImageButton  
                            android:id="@+id/take_photo_btn"
                            android:layout_width="fill_parent" 
                            android:layout_height="fill_parent" 
                            android:layout_margin="8dp"
                            android:background="@drawable/btn_take_photo"
                            android:scaleType="fitXY"
                            />
                        <Button  
                            android:id="@+id/delete_photo_btn"
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/btn_delete_photo_add_merchant"
                            
                            />
                    </RelativeLayout>
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/thumb_image_view"
                        android:paddingLeft="8dp"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/upload_image_title_txv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/add_merchant_upload_photo"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/upload_image_description_txv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:text="@string/add_merchant_upload_photo_not_added"
                            android:textSize="14sp"
                            android:textColor="@color/black_light" />
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/add_merchant_thanks"
                    android:textSize="12sp"
                    android:textColor="@color/black_light"/>
                <LinearLayout 
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:gravity="left|center_vertical"
                    android:background="@drawable/list_single">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:gravity="left|center_vertical"
                        android:text="@string/contact"
                        android:textSize="16sp"/>
                    <EditText android:id="@+id/your_telephone_edt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="11"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:hint="@string/please_input_your_telephone"
                        android:background="@color/transparent"
                        android:inputType="phone" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        
        <com.tigerknows.widget.FilterListView
            android:id="@+id/filter_list_view"
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:visibility="gone"
            ></com.tigerknows.widget.FilterListView>
    </RelativeLayout>
</LinearLayout>


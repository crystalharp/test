<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_discover">
	<include android:id="@+id/title_view"
	    layout="@layout/title" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" />
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="left|top">
	<ScrollView android:id="@+id/add_merchant_scv"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:scrollbars="vertical"
	    android:gravity="top"
	    android:fillViewport="true"
	    android:fadingEdge="none">
		<LinearLayout 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
            android:orientation="vertical">
			<LinearLayout 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
		        android:paddingTop="2dp"
		        android:paddingBottom="2dp"
            	android:paddingLeft="8dp"
		        android:gravity="left|center_vertical"
		        android:background="@color/white">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="4dp"
			        android:gravity="left|center_vertical"
			        android:text="@string/shanghumingcheng"
			        android:textSize="16sp"/>
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="4dp"
			        android:gravity="left|center_vertical"
			        android:text="@string/need_star"
			        android:textColor="@color/orange"
			        android:textSize="16sp"/>
			    <EditText android:id="@+id/shanghumingcheng_edt"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:maxLength="80"
			        android:textSize="14sp"
				    android:layout_marginTop="2dp"
				    android:layout_marginBottom="2dp"
				    android:focusable="true"
				    android:focusableInTouchMode="true"
				    android:singleLine="true"
				    android:ellipsize="end"
				    android:background="@color/transparent"/>
		    </LinearLayout>
            <ImageView 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:background="@drawable/bg_line_split"
			    />
			<LinearLayout 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:paddingLeft="8dp"
		        android:gravity="left|center_vertical"
		        android:background="@color/white">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="4dp"
			        android:gravity="left|center_vertical"
			        android:text="@string/shanghuleixing"
			        android:textSize="16sp"/>
				<TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="4dp"
			        android:gravity="left|center_vertical"
			        android:text="@string/need_star"
			        android:textColor="@color/orange"
			        android:textSize="16sp"/>
			    <Button android:id="@+id/shanghuleixing_btn"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:drawableRight="@drawable/ic_select"
			        android:textColor="@color/black_dark"
			        android:gravity="left|center_vertical"
				    android:layout_marginTop="2dp"
				    android:layout_marginBottom="2dp"
				    android:focusable="true"
				    android:focusableInTouchMode="true"
		            android:paddingLeft="8dp"
		            android:paddingRight="8dp"
			        android:singleLine="true"
			        android:ellipsize="end"
					android:background="@color/transparent"/>
		    </LinearLayout>
		    
            <ImageView 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:background="@drawable/bg_line_split"
			    />
			<LinearLayout 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
		        android:paddingTop="2dp"
		        android:paddingBottom="2dp"
		        android:paddingLeft="8dp"
		        android:gravity="left|center_vertical"
		        android:background="@color/white">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="4dp"
			        android:gravity="left|center_vertical"
			        android:text="@string/shanghudizhi"
			        android:textSize="16sp"/>
				<TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="4dp"
			        android:gravity="left|center_vertical"
			        android:text="@string/need_star"
			        android:textColor="@color/orange"
			        android:textSize="16sp"/>
				
		        <Button
		            android:id="@+id/city_btn"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="left|center_vertical"
		            android:paddingLeft="8dp"
		            android:drawableRight="@drawable/ic_small_triangle_down"
		            android:background="@color/transparent"
		            >
		        </Button>
			    <EditText android:id="@+id/shanghudizhi_edt"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:maxLength="80"
			        android:textSize="14sp"
				    android:layout_marginTop="2dp"
				    android:layout_marginBottom="2dp"
				    android:focusable="true"
				    android:focusableInTouchMode="true"
				    android:singleLine="true"
				    android:ellipsize="end"
					android:background="@color/transparent"/>
		    </LinearLayout>
		    
            <ImageView 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:background="@drawable/bg_line_split"
			    />
			<LinearLayout 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
		        android:paddingTop="2dp"
		        android:paddingBottom="2dp"
		        android:paddingLeft="8dp"
		        android:gravity="left|center_vertical"
		        android:background="@color/white">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="4dp"
			        android:gravity="left|center_vertical"
			        android:text="@string/shanghudianhua"
			        android:textSize="16sp"/>
			    <EditText android:id="@+id/shanghudianhua_edt"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:maxLength="80"
			        android:textSize="14sp"
				    android:layout_marginTop="2dp"
				    android:layout_marginBottom="2dp"
				    android:focusable="true"
				    android:focusableInTouchMode="true"
				    android:singleLine="true"
				    android:ellipsize="end"
					android:background="@color/transparent"
					android:phoneNumber="true"/>
		    </LinearLayout>
		    
            <ImageView 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:background="@drawable/bg_line_split"
			    />
			<LinearLayout 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
		        android:paddingTop="2dp"
		        android:paddingBottom="2dp"
		        android:paddingLeft="8dp"
		        android:gravity="left|center_vertical"
		        android:background="@color/white">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="4dp"
			        android:gravity="left|center_vertical"
			        android:text="位置描述："
			        android:textSize="16sp"/>
			    <EditText android:id="@+id/position_description_edt"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:maxLength="80"
			        android:textSize="14sp"
				    android:layout_marginTop="2dp"
				    android:layout_marginBottom="2dp"
				    android:focusable="true"
				    android:focusableInTouchMode="true"
				    android:singleLine="true"
				    android:ellipsize="end"
					android:background="@color/transparent"
					android:phoneNumber="true"/>
		    </LinearLayout>
		    
            <ImageView 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:background="@drawable/bg_line_split"
			    />
			<LinearLayout 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
		        android:paddingTop="2dp"
		        android:paddingBottom="2dp"
		        android:paddingLeft="8dp"
		        android:gravity="left|center_vertical"
		        android:background="@color/white">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="4dp"
			        android:gravity="left|center_vertical"
			        android:text="营业日期："
			        android:textSize="16sp"/>
			    <Button android:id="@+id/date_btn"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:maxLength="80"
			        android:textSize="14sp"
				    android:layout_marginTop="2dp"
				    android:layout_marginBottom="2dp"
				    android:hint="选择营业日期"
				    android:singleLine="true"
				    android:ellipsize="end"/>
		    </LinearLayout>
		    
            <ImageView 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:background="@drawable/bg_line_split"
			    />
			<LinearLayout 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
		        android:paddingTop="2dp"
		        android:paddingBottom="2dp"
		        android:paddingLeft="8dp"
		        android:gravity="left|center_vertical"
		        android:background="@color/white">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="4dp"
			        android:gravity="left|center_vertical"
			        android:text="@string/yingyeshijian"
			        android:textSize="16sp"/>
			    <Button android:id="@+id/time_btn"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:maxLength="80"
			        android:textSize="14sp"
				    android:layout_marginTop="2dp"
				    android:layout_marginBottom="2dp"
				    android:hint="选择营业时段"
				    android:singleLine="true"
				    android:ellipsize="end"/>
		    </LinearLayout>
		    
            <ImageView 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:background="@drawable/bg_line_split"
			    />
			<LinearLayout 
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
		        android:paddingTop="2dp"
		        android:paddingBottom="2dp"
		        android:paddingLeft="8dp"
		        android:gravity="left|center_vertical"
		        android:background="@color/white">
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="4dp"
			        android:gravity="left|center_vertical"
			        android:text="@string/ningdedianhua"
			        android:textSize="16sp"/>
			    <EditText android:id="@+id/ningdedianhua_edt"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:maxLength="80"
			        android:textSize="14sp"
				    android:layout_marginTop="2dp"
				    android:layout_marginBottom="2dp"
				    android:focusable="true"
				    android:focusableInTouchMode="true"
				    android:singleLine="true"
				    android:ellipsize="end"
					android:background="@color/transparent"
					android:phoneNumber="true"/>
		    </LinearLayout>
		    <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
		        android:background="@drawable/bg_discover">
		        <ImageView
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:background="@drawable/bg_sawtooth" />
	        </LinearLayout>
		    <RelativeLayout 
			    android:layout_width="160dp" 
			    android:layout_height="160dp"
			    android:layout_gravity="center_horizontal" >
				<ImageView  
				    android:layout_width="fill_parent" 
				    android:layout_height="fill_parent" 
				    android:background="@drawable/list_single_normal"
				    />
				<ImageButton  
				    android:id="@+id/take_photo_btn"
				    android:layout_width="fill_parent" 
				    android:layout_height="fill_parent" 
				    android:layout_margin="8dp"
				    android:background="@drawable/btn_take_photo"
				    android:scaleType="fitXY"
				    />
			</RelativeLayout>
		</LinearLayout>
	</ScrollView>
	
		<RelativeLayout 
		    android:id="@+id/image_view"
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent"
		    android:layout_gravity="center_horizontal"
		    android:visibility="gone"
		    android:background="@color/white" >
			<ImageView  
			    android:id="@+id/image_imv"
			    android:layout_width="fill_parent" 
			    android:layout_height="fill_parent" 
			    android:background="@color/black_light"
			    android:layout_centerInParent="true"
			    />
			<Button  
			    android:id="@+id/cancel_btn"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentBottom="true"
			    android:text="@string/cancel"
			    />
			<Button  
			    android:id="@+id/confirm_btn"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:layout_alignParentRight="true"
			    android:layout_alignParentBottom="true"
			    android:text="@string/confirm"
			    />
		</RelativeLayout>
	</RelativeLayout>
</LinearLayout>


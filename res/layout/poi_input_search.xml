<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/gray_dark"
    >

    <LinearLayout
        android:id="@+id/traffic_btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:visibility="gone"
        >

        <Button
            android:id="@+id/btn_my_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/my_location" />

        <Button
            android:id="@+id/btn_fav_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/favorite" />

        <Button
            android:id="@+id/btn_map_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/map_select_point" />
        
    </LinearLayout>
        
    <ListView
        android:id="@+id/suggest_lsv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:scrollingCache="false"
        android:fadingEdge="none"
        android:divider="@drawable/list_selector_background_gray_light"
        />
    
</LinearLayout>

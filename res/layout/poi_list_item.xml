<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/list_selector_background_gray_light">

    <RelativeLayout
        android:id="@+id/picture_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        >
        <ImageView
            android:id="@+id/bg_imv"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_picture_tuangou"
            />
        <ImageView
            android:id="@+id/picture_imv"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/icon"
            />
        <ImageView
            android:id="@+id/marker_imv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignRight="@id/bg_imv"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:scaleType="fitXY"
            android:background="@drawable/icon"
            />
    </RelativeLayout>
    
    <ImageView 
        android:id="@+id/bubble_imv" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/picture_view" 
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_a_poi" />    
    <LinearLayout
        android:id="@+id/name_view" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/bubble_imv" 
        android:paddingBottom="5dp"  >
    <TextView 
        android:id="@+id/name_txv" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:gravity="left"
        android:textColor="@color/black_dark"
        android:textSize="16sp"
        android:text="@string/app_name"
        android:singleLine="true"
        android:lineSpacingExtra="0dp"
        android:includeFontPadding="false"
        android:focusable="false" />   
    <LinearLayout android:id="@+id/dynamic_poi_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left|center_vertical"
        ></LinearLayout> 
    </LinearLayout>   
    <RatingBar android:id="@+id/stars_rtb"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:padding="0dp"
        android:layout_toRightOf="@id/picture_view" 
        android:layout_below="@id/name_view" 
        android:progressDrawable="@drawable/ratingbar_small"
        style="@style/RatingBar.Small"
        android:numStars="5"
        android:focusable="false"
        android:focusableInTouchMode="false" /> 
    
    <TextView 
        android:id="@+id/distance_txv" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:layout_below="@id/name_view" 
        android:textColor="@color/black_light"
        android:textSize="14sp"
        android:text="@string/app_name"
        android:singleLine="true"
        android:focusable="false" />   
    
    <TextView 
        android:id="@+id/distance_from_txv" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_toLeftOf="@id/distance_txv" 
        android:layout_below="@id/name_view" 
        android:drawableRight="@drawable/ic_a_poi"
        android:textColor="@color/black_light"
        android:textSize="14sp"
        android:text="@string/distance"
        android:singleLine="true"
        android:focusable="false" />   
    
    <TextView 
        android:id="@+id/category_txv" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/stars_rtb" 
        android:layout_toLeftOf="@id/distance_from_txv" 
        android:layout_below="@id/name_view" 
        android:textSize="14sp"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:textColor="@color/black_light"
        android:text="@string/app_name"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:focusable="false" 
        android:gravity="left|top"/>   
        
    <TextView 
        android:id="@+id/money_txv" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true" 
        android:layout_below="@id/category_txv" 
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:paddingBottom="2dp"
        android:textColor="@color/orange"
        android:textSize="16sp"
        android:text="@string/app_name"
        android:singleLine="true"
        android:lineSpacingExtra="0dp"
        android:includeFontPadding="false"
        android:focusable="false" /> 
        
    <TextView 
        android:id="@+id/comment_txv" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/picture_view" 
        android:layout_toLeftOf="@id/money_txv"
        android:layout_below="@id/stars_rtb" 
        android:layout_marginTop="6dp"
        android:paddingBottom="2dp"
        android:textColor="@color/black_light"
        android:textSize="14sp"
        android:text="@string/app_name"
        android:singleLine="true"
        android:lineSpacingExtra="0dp"
        android:includeFontPadding="false"
        android:focusable="false" /> 
    
    <ImageView 
        android:id="@+id/stamp_imv" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_stamp_silver" />   
</RelativeLayout>

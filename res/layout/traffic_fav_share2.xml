<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/traffic_result_action"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_light"
    android:padding="4dp">

    <RelativeLayout android:id="@+id/favorite_rll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"	
      	android:layout_weight="1"
      	android:layout_marginRight="2dp"
      	android:background="@drawable/btn_default" >
      	<LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >
      	    <ImageView 
	        	android:id="@+id/image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:background="@drawable/ic_favorite"
	            android:focusable="false"
	            android:focusableInTouchMode="false"/>
      	    <TextView
	        	android:id="@+id/favorite"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/favorite"
            	android:textSize="14sp"
	            android:singleLine="true"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/text_hint_gray"
	            android:gravity="center"/>
	      	<View 
	            android:layout_width="8dp"
	            android:layout_height="fill_parent" />
      	</LinearLayout>
    </RelativeLayout>      
	          
    <RelativeLayout android:id="@+id/share_rll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:layout_marginLeft="2dp"
    	android:background="@drawable/btn_default" >
      	
      	<LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >
      	    <ImageView 
	        	android:id="@+id/image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:background="@drawable/ic_share"
	            android:focusable="false"
	            android:focusableInTouchMode="false"/>
      	    <TextView
	        	android:id="@+id/share"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/share"
	            android:singleLine="true"
            	android:textSize="14sp"
        		android:paddingRight="8dp"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/text_hint_gray"
	            android:gravity="center"/>
      	</LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/errorrecovery_rll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:layout_marginLeft="2dp"
    	android:background="@drawable/btn_default" >
      	<LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >
      	    <ImageView 
	        	android:id="@+id/image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:background="@drawable/ic_recovery_error"
	            android:focusable="false"
	            android:focusableInTouchMode="false"/>
      	    <TextView
	        	android:id="@+id/errorrecovery"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/error_recovery"
            	android:textSize="14sp"
	            android:singleLine="true"
        		android:paddingRight="8dp"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/text_hint_gray"
	            android:gravity="center"/>
      	</LinearLayout>
    </RelativeLayout>
</LinearLayout>


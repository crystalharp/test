<?xml version="1.0" encoding="utf-8"?>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    >
	
        <RelativeLayout android:id="@+id/traffic_rll"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="4dp"
	        android:background="@drawable/bg_gradient">
	        <LinearLayout android:id="@+id/traffic_lsv"
	            android:layout_width="fill_parent" 
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_toLeftOf="@+id/traffic_query_btn"
	            android:layout_alignParentTop="true"
	            android:layout_marginLeft="4dp">
	            <LinearLayout 
			        android:layout_width="fill_parent" 
			        android:layout_height="wrap_content"
			        android:orientation="horizontal" >
			        <Button
			            android:id="@+id/select_start_btn"
			            style="?android:attr/buttonStyleSmall"
			            android:background="@drawable/ic_traffic_select_start"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content" />

			        <include
			            android:id="@+id/start_line"
			            layout="@layout/traffic_query_input_line" />

        		</LinearLayout>
	            <LinearLayout 
			        android:layout_width="fill_parent" 
			        android:layout_height="wrap_content"
			        android:layout_marginTop="2dp">
			        <Button
			            android:id="@+id/select_end_btn"
			            style="?android:attr/buttonStyleSmall"
			            android:background="@drawable/ic_traffic_select_end"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content" />
			        <include android:id="@+id/end_line" layout="@layout/traffic_query_input_line" />
        		</LinearLayout>
	        </LinearLayout>
	        <Button android:id="@+id/traffic_query_btn"
	            android:text="@string/query"
	            android:layout_alignParentRight="true"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true" />
<!-- 	        <Button android:id="@+id/exchange_btn" -->
<!-- 	            android:background="@drawable/btn_exchange" -->
<!-- 	            android:layout_alignParentLeft="true" -->
<!-- 	            android:layout_width="wrap_content"  -->
<!-- 	            android:layout_height="wrap_content" -->
<!-- 	            android:layout_centerVertical="true" /> -->

	    </RelativeLayout>

	    <RelativeLayout android:id="@+id/busline_rll"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:background="@drawable/bg_gradient"
	        android:visibility="gone">     
	        <include android:id="@+id/busline_edt"
				layout="@layout/traffic_query_input_line" />  
			<Button android:id="@+id/busline_query_btn"
	            android:text="@string/query"
	            android:layout_alignParentRight="true"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true" />
	    </RelativeLayout>
		
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        <ImageView 
		        android:id="@+id/shadow1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@android:color/white"
		        android:scaleType="fitXY"
		        android:src="@drawable/bg_shadow" />
		    <TextView 
		        android:id="@+id/cur_city_txt" 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="10dp"
		        android:paddingTop="2dp"
		        android:paddingBottom="2dp"
		        android:textColor="@android:color/black"
		        android:textSize="13sp"
		        android:singleLine="true" 
		        android:background="@color/traffic_current_city_bg"/>
	    </LinearLayout>
	
    </LinearLayout>

<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:gravity="center">
    
	<LinearLayout
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	    android:background="@android:color/white"
	    android:orientation="vertical"
	    android:gravity="center">
	    <LinearLayout android:id="@+id/filter_lnl"
	        android:padding="0dp"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:background="@color/bg_bar"
	        android:gravity="center"
	        android:orientation="horizontal"
	        android:weightSum="3">
	    </LinearLayout>
        <ImageView 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shadow" />
        <TextView 
            android:id="@+id/result_txv"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:textSize="13sp"
            android:paddingLeft="12dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="@string/app_name"
            android:drawableLeft="@drawable/ic_mylocation_poi_result"
            android:drawablePadding="6dp"
            android:textColor="#ff6c6c6c"
            android:background="#ffeaeaea">
        </TextView>
	    <FrameLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        >
	    
		    <include layout="@layout/poi_result_empty"
		            android:id="@+id/empty_view"
		            android:layout_width="fill_parent" 
		            android:layout_height="fill_parent" />
		    
		    <include layout="@layout/querying"
		            android:id="@+id/querying_view"
		            android:layout_width="fill_parent" 
		            android:layout_height="fill_parent" />
	            
	        <com.tigerknows.view.SpringbackListView android:id="@+id/result_lsv"
	            android:layout_width="fill_parent" 
	            android:layout_height="fill_parent"
	            android:divider="@drawable/divider"
	            android:footerDividersEnabled="false"
	            android:fadingEdge="none"
	            android:scrollingCache="false"/>
	    </FrameLayout>
    </LinearLayout>
    <ImageButton 
        android:id="@+id/dingdan_btn"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:background="@drawable/btn_dingdan_normal" />
</RelativeLayout>

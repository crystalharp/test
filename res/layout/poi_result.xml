<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tkandroid ="http://schemas.android.com/apk/res/com.tigerknows"
    android:id="@+id/root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_light"
    android:orientation="vertical"
    android:gravity="center"
    >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/filter_control_view"
            android:padding="0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3"
            >
        </LinearLayout>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <include
                layout="@layout/empty_view"
                android:id="@+id/empty_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
            
            <com.tigerknows.widget.QueryingView
                android:id="@+id/querying_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                >
            </com.tigerknows.widget.QueryingView>
                
            <com.tigerknows.widget.SpringbackListView
                android:id="@+id/result_lsv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@drawable/bg_line_split"
                android:footerDividersEnabled="true"
                android:fadingEdge="none"
                android:scrollingCache="false"
                />
            <com.tigerknows.widget.RetryView
               android:id="@+id/retry_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                >
            </com.tigerknows.widget.RetryView>
	        <RelativeLayout
	            android:id="@+id/add_merchant_view"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:background="@color/white"
                android:visibility="gone"
	            >
	            <include 
	               android:id="@+id/add_merchant_item_view"
	               android:layout_width="fill_parent"
	               android:layout_height="wrap_content"
	               android:layout_alignParentTop="true"
	               layout="@layout/poi_list_item_add_merchant"
	               />
            </RelativeLayout>
            <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_sawtooth"
                />
        </FrameLayout>
    </LinearLayout>
    <ImageButton 
        android:id="@+id/dingdan_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:background="@drawable/btn_dingdan"
        />
        
    <com.tigerknows.ui.hotel.NavigationWidget
        android:id="@+id/navigation_widget"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        tkandroid:navigationState="0"
        >
    </com.tigerknows.ui.hotel.NavigationWidget>
</RelativeLayout>

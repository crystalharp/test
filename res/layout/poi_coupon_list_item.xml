<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/list_selector_background_gray_light">

    <RelativeLayout
        android:id="@+id/picture_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        >
        <ImageView
            android:id="@+id/bg_imv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_picture_hotel"
            />
        <ImageView
            android:id="@+id/picture_imv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/icon"
            />
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/name_txv" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/picture_view"
        android:paddingBottom="5dp"
        android:gravity="left"
        android:textColor="@color/black_dark"
        android:textSize="16sp"
        android:text="@string/app_name"
        android:lines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="0dp"
        android:includeFontPadding="false"
        android:focusable="false" />   
        
    <TextView 
        android:id="@+id/hot_txv" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/picture_view"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_discover_address"
        android:textColor="@color/black_light"
        android:textSize="14sp"
        android:text="@string/app_name"
        android:singleLine="true"
        android:lineSpacingExtra="0dp"
        android:includeFontPadding="false"
        android:focusable="false" /> 
</RelativeLayout>

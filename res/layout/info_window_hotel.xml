<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:padding="4dp"
    >
    
    <RelativeLayout
        android:id="@+id/picture_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-6dp"
        >
        <ImageView 
	        android:id="@+id/icon_imv"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:background="@drawable/bg_picture_tuangou"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:layout_marginBottom="14dp"
	        />        

         <TextView 
             android:id="@+id/can_reserve_txv"
             android:layout_width="60dp"
             android:layout_height="wrap_content"
	         android:layout_marginLeft="8dp"
	         android:layout_marginRight="8dp"
	         android:layout_marginBottom="14dp"
             android:layout_centerHorizontal="true"
             android:layout_alignParentBottom="true"
             android:background="#99000000"
             android:textColor="@color/white"
             android:textSize="16sp"
             android:text="订满"
             android:gravity="left"
             android:focusable="false"
             android:singleLine="true"
             />
    </RelativeLayout>
        
    <RelativeLayout
        android:id="@+id/body_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="15sp"
            android:id="@+id/name_txv"
            android:text="@string/app_name"
            android:textColor="@color/black_dark"
            android:maxLines="2"
            android:minLines="2"
            android:ellipsize="end"
            >
        </TextView>
        
        <TextView 
            android:id="@+id/price_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/name_txv"
            android:text="@string/app_name"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="18sp"
            android:singleLine="true"
            >
        </TextView>

        <TextView
            android:id="@+id/rmb_text_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_txv"
            android:layout_toRightOf="@id/price_txv"
            android:layout_alignBaseline="@id/price_txv"
            android:textColor="@color/black_light"
            android:textSize="14sp"
            android:text="起"
            android:singleLine="true"
            android:focusable="false"
            android:visibility="gone"
            />
            
    </RelativeLayout>
    <View android:id="@+id/view2"
        android:background="@color/infowindow_split_line"
        android:layout_height="fill_parent"
        android:layout_width="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"
        >
    </View>
    <Button 
        android:id="@+id/traffic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_goto_here"
        android:contentDescription="@string/app_name"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        />
</LinearLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="top"
    >
    <LinearLayout 
        android:id="@+id/topPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="clip_horizontal"
        android:background="@drawable/bg_map_tools"
        >
        
        <LinearLayout
            android:id="@+id/buttonPanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:weightSum="4"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="16dp"
            >     
                
            <LinearLayout 
                android:id="@+id/button0_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"  >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/black_light"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_map_toosl_submay"
                    android:text="@string/subway_map"/>
            </LinearLayout>
                
            <LinearLayout 
                android:id="@+id/button1_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"  >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/black_light"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_take_screenshot"
                    android:text="@string/take_screenshot"/>
            </LinearLayout>
                
            <LinearLayout 
                android:id="@+id/button2_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"  >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/black_light"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_measure_distance"
                    android:text="@string/measure"/>
            </LinearLayout>
                
            <LinearLayout 
                android:id="@+id/button3_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"  >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@color/black_light"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_compass_map_tools"
                    android:text="@string/compass"/>
            </LinearLayout>
         </LinearLayout>
    
        <ImageView 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/bg_line_split"/>
        
        <RelativeLayout android:id="@+id/show_zoom_button_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            >
            <CheckBox 
                android:id="@+id/show_zoom_button_chb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/show_zoom_button_chb"
                android:layout_centerVertical="true"
                android:text="@string/show_zoom_button"
                android:textColor="@color/black_light"
                />
         </RelativeLayout>
    </LinearLayout>
    
    <RelativeLayout android:id="@+id/bottomPanel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/topPanel"
        android:background="@color/transparent"
        >
    </RelativeLayout>
</RelativeLayout>

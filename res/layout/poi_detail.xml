<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:background="@drawable/bg_discover">
	            
    <LinearLayout 
        android:id="@+id/control_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/bg_bottom_control"
        android:weightSum="4"
        android:gravity="center">
        <LinearLayout
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
        <Button android:id="@+id/poi_btn" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:background="@drawable/btn_search_nearby"
            android:gravity="center"/>
        </LinearLayout>
            
        <LinearLayout
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
        <Button android:id="@+id/favorite_btn" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:background="@drawable/btn_favorite"
            android:gravity="center"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
        <Button android:id="@+id/share_btn" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:background="@drawable/btn_share"
            android:gravity="center"/>
        </LinearLayout>
            
        <LinearLayout
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
        <Button android:id="@+id/error_recovery_btn" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:background="@drawable/btn_recovery_error"
            android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    
    <ScrollView
        android:id="@+id/body_scv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/control_view"
        android:scrollbars="vertical"
        android:gravity="top"
        android:fillViewport="true"
        android:fadingEdge="none">
    
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
             android:layout_width="fill_parent" 
             android:layout_height="fill_parent"
             android:gravity="left|top">
            <LinearLayout
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="left|top"
                android:background="@android:color/white">
                <RelativeLayout
	                android:layout_width="fill_parent" 
	                android:layout_height="wrap_content"
	                android:gravity="left|top">
	                
	                <com.tigerknows.view.AlwaysMarqueeTextView android:id="@+id/name_txv"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_alignParentTop="true" 
	                    android:paddingBottom="6dp"
	                    android:gravity="left"
	                    android:text="@string/app_name"
	                    android:textColor="@color/black_dark"
	                    android:textSize="18sp"
	                    android:scrollHorizontally="true" 
	                    android:singleLine="true"
	                    android:ellipsize="marquee"
	                    android:focusable="true"
	                    android:focusableInTouchMode="true"></com.tigerknows.view.AlwaysMarqueeTextView>
	    
	               <RatingBar android:id="@+id/stars_rtb"
	                   android:layout_width="wrap_content"
	                   android:layout_height="18dp"
	                   android:layout_alignParentLeft="true"
	                   android:layout_below="@id/name_txv" 
	                   android:progressDrawable="@drawable/ratingbar_small"
	                   style="?android:attr/ratingBarStyleSmall"
	                   android:numStars="5"
				       android:focusable="false"
				       android:focusableInTouchMode="false" />
	               
	               <TextView 
	                   android:id="@+id/money_txv" 
	                   android:layout_width="wrap_content"
	                   android:layout_height="wrap_content" 
	                   android:layout_below="@id/name_txv" 
	                   android:layout_alignParentRight="true"
	                   android:textColor="@color/orange"
	                   android:textSize="16sp"
	                   android:text="@string/app_name"
	                   android:singleLine="true"
	                   android:focusable="false" 
	                   android:includeFontPadding="false" />  
	        
	               <TextView 
	                   android:id="@+id/category_txv" 
	                   android:layout_width="fill_parent"
	                   android:layout_height="wrap_content" 
	                   android:paddingLeft="5dp"
	                   android:layout_toRightOf="@id/stars_rtb" 
	                   android:layout_toLeftOf="@id/money_txv" 
	                   android:layout_below="@id/name_txv" 
	                   android:textColor="@color/black_light"
	                   android:textSize="16sp"
	                   android:text="@string/app_name"
	                   android:singleLine="true"
	                   android:focusable="false" 
	                   android:includeFontPadding="false" />    
	            </RelativeLayout>
	            <TextView 
	                android:id="@+id/description_txv" 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content" 
	                android:paddingTop="4dp"
	                android:textColor="@color/black_light"
	                android:textSize="15sp"
	                android:text="@string/app_name"
	                android:focusable="false" /> 
            </LinearLayout>
            <ImageView 
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="8dp"
                 android:background="@drawable/bg_sawtooth" /> 
                
            <LinearLayout
            	android:id="@+id/address_phone_view"
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">
                <LinearLayout android:id="@+id/telephone_view"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content" 
		            android:gravity="center_vertical"
		            android:orientation="horizontal"
		            >
		         <TextView android:id="@+id/telephone_txv"
		             android:layout_width="fill_parent"
		             android:layout_height="wrap_content" 
                     android:layout_margin="8dp"
		             android:gravity="left|center_vertical"
		             android:drawableRight="@drawable/ic_telephone"
		             android:text="@string/app_name" 
		             android:textColor="@android:color/black"
		             android:textSize="16sp"
		             android:autoLink="none"
		             ></TextView>
		        </LinearLayout>
                
                <ImageView android:id="@+id/address_telephome_divider_imv" 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:background="@drawable/bg_real_line" />
                
                <RelativeLayout android:id="@+id/address_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
	                android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
	                <TextView android:id="@+id/address_txv"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_margin="8dp"
		                android:gravity="left|center_vertical"
	                    android:text="@string/app_name" 
	                    android:textColor="@android:color/black"
		                android:drawableRight="@drawable/ic_goto_here"
	                    android:textSize="16sp"
		                android:autoLink="none"
	                    />
                </RelativeLayout>

            </LinearLayout>
                
            <LinearLayout android:id="@+id/dynamic_poi_list_view"
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                >
            </LinearLayout>
                
            <LinearLayout android:id="@+id/comment_list_view"
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:id="@+id/comment_sum_total_view" 
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_header"
                    android:clickable="true">
                    <TextView
                        android:id="@+id/comment_sum_total_txv" 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" 
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:gravity="left|center_vertical"
                        android:text="@string/comment"
	                    android:clickable="false"
	                    android:focusable="false"
	                    android:focusableInTouchMode="false"/>
                    <TextView
                        android:id="@+id/look_all_txv" 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:gravity="right|center_vertical"
                        android:drawableRight="@drawable/ic_view_all_comment"
                        android:textColor="@color/text_gray"
                        android:text="@string/look_all_comment"
                        android:textSize="14sp"
	                    android:clickable="false"
	                    android:focusable="false"
	                    android:focusableInTouchMode="false"/>
                </RelativeLayout>
                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" 
                        android:background="@drawable/bg_real_line" />
            </LinearLayout> 
    
		    <include 
		        android:id="@+id/comment_tip_view"
		        layout="@layout/comment_tip"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp" />
                
           <LinearLayout 
               android:id="@+id/feature_txv" 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content" 
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"
               android:layout_marginBottom="8dp"
               android:paddingLeft="8dp"
               android:paddingRight="8dp"
               android:orientation="vertical"
               android:gravity="left"
               android:background="@drawable/list_single_normal"
               android:focusable="false" />
               
			</LinearLayout>	    
		    <ImageView 
		        android:id="@+id/stamp_imv" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:layout_alignParentRight="true"
		        android:layout_alignParentTop="true"
		        android:layout_marginTop="8dp"
		        android:layout_marginRight="64dp"
		        android:background="@drawable/ic_stamp_gold" />  
            </RelativeLayout>
         </LinearLayout>
    </ScrollView>
    <ImageView 
        android:id="@+id/stamp_big_imv" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_centerInParent="true"
        android:background="@drawable/ic_stamp_gold_big" />  
        
    <include
        android:id="@+id/loading_view"
	    layout="@layout/loading_small"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="horizontal"
        android:layout_above="@id/control_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp">
	</include> 
</RelativeLayout>